// But first, globals

#collection--sidebar {
    font-family: $font-stack--heading;

    ul {
        margin: 0;
        list-style: none;

        li {
            margin-left: 0;
        }
        a {
            color: $color--primary-1;
        }
        li.active a {
            font-weight: $font-weight--bold;
        }
    }
    h3 {
        @include fontDim(13px,42px,.04em);
        font-weight: $font-weight--bold;
        text-transform: uppercase;
    }
}

