.progress-circle {
  // the outer circle
  font-size: 20px;
  margin: 20px;
  position: relative;
  padding: 0;
  width: 180px;
  height: 180px;
  background-color: $color--field-1;
  border-radius: 50%;

  &:after {
    // the inner circle
    border: none;
    position: absolute;
    z-index: 2;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    display: block;
    border-radius: 50%;
    width: 160px;
    height: 160px;
    background-color: #fff;
    content: " ";
  }
  .left-half-clipper {
    border-radius: 50%;
    width: 180px;
    height: 180px;
    position: absolute;
    clip: rect(0,180px,180px,90px);
  }
    &.over50 .left-half-clipper {
      clip: rect(auto,auto,auto,auto)
    }

  .points-info {
    // magic numbers
    @include flexbox;
    @include flex-direction( column );
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
    text-align: center;
  }
  .value-bar {
    // the shape that shows progress
    position: absolute;
    clip: rect(0,90px,180px,0);
    width: 180px;
    height: 180px;
    border-radius: 50%;
    border: 40px solid $color--accent-1;
    box-sizing: border-box;
  }

  &.over50 .first50-bar {
    // when the progress is over 50, show a duplicate shape to denote the first half
    position: absolute;
    clip: rect(0,180px,180px,90px);
    background-color: $color--accent-1;
    border-radius: 50%;
    width: 180px;
    height: 180px;
  }
  &:not(.over50) .first50-bar {
    display: none;
  }
  &.p0 .value-bar {
    display: none;
  }

  @for $i from 1 through 100 {
    &.p#{$i} .value-bar {
      transform: rotate( ( $i / 100 ) * 360deg );
    }
  }
}


