    border-collapse: collapse;
    width: 95%;
    margin: 8% 5%;

    tr {
      border: none; 
      height:50px;
    }    
    td {
      border-right: solid 1px {{ settings.dotted_color }}; 
      border-left: solid 1px {{ settings.dotted_color }};
      font-size: 13px;
      text-align: center;
      vertical-align: middle;

      &:first-child {
        text-align: left;
        border-left: 0;
        width:25%;
      }
      &:last-child {
        border-right: 0;
      }
  
