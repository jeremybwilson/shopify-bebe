// :: DASHBOARD :: VIP Tiers Breakdown

#club--vip-tiers {
  margin-top: 2em;

  @include mq('lap-and-up') {
    margin-top: 5em;
  }

  h2 {
    color: $color--accent-1;
    margin: 0 0 12px;
    @include fontSize( 18px );
    text-align: center;
  }

  p {
    text-align: center;
    margin: 1em auto;
  }

  #club--vip-tiers--mobile-chart {
    @include flexbox;
    @include flex-wrap( wrap );
    list-style: none;

    @include mq('lap-and-up') {
      display: none;
    }

    & > li {
      position: relative;
      width: 50%;
      padding: 20px 10px;
      text-align: center;
      color: $color--field-1;

      &.club--tier-active {
        color: $color--accent-1;
        border: solid 1px $color--accent-1;
        border-bottom-width: 4px;

        &:after {
          content: 'Current';
          position: absolute;
          bottom: 0;
          right: 0;
          width: 100%;
          padding: 3px;
          background: $color--accent-1;
          @include fontDim( 9px, 9px, 0em );
          font-weight: $font-weight--bold;
          text-transform: uppercase;
          color: $color--reverse-1;
        }
      }

      h4 {
        color: inherit;
        text-transform: none;
      }
      span {
        display: block;
      }

      dt {
        display: block;
        padding-top: 12px;
        padding-bottom: 8px;
        text-transform: uppercase;
        @include fontDim( 10px, 12px, 0em );
      }
      dd {
        font-style: normal;
        @include fontSize( 26px );

        span {
          @include fontSize( 15px );
        }
      }
    }
  }

  table {
    display: none;
    line-height: 1.4em;
    border-bottom: none;

    @include mq('lap-and-up') {
      display: inherit;
    }
    th, td {
      background: none;
      border-right: solid 1px $color--field-1;

      &:last-child {
        border-right: none;
      }
    }
    thead {
      th {
        text-align: center;

        span {
          color: $color--field-1;
          font-weight: $font-weight--book;
        }
        &.club--tier-active span {
          color: $color--accent-1;
        }
        .club-title {
          display: block;
          font-weight: $font-weight--medium;
          text-transform: capitalize;
        }
      }
    }

    tbody {
      th {
        width: 25%;

        span {
          @include fontDim( 11px, 12px, 0 );
          font-weight: $font-weight--book;
        }
      }
      td {
        text-align: center;
        @include fontSize( 14px );

        span {
          color: $color--field-1;
        }
        &.club--tier-active span {
          color: $color--accent-1;
        }
      }
    }
  }
}

