#page .shogun-root {

// elements 

.shg-row {
	margin: 15px 0;

	@include mq('phone') {
		margin: 0;
	}
}

.shg-row > div {
	@include mq('phone') {
		margin: 10px 0 !important;
	}	
}

.shogun-heading-component {

	h1 {
		@include h1-alt;
		@include fontSize (30px);
		text-transform: uppercase;
		border-bottom: none;
		padding: 0;
	}

	h2 {
		@include h2-alt;
		@include fontSize (20px);
		line-height: 1.2em;
    	letter-spacing: 0em;
	}

	h3 {
		@include h3;
	}

}

.shg-rich-text {
	p {
	    @include p;
	}
}

.shg-btn-wrapper {
	display: inline-block;
	min-width: 230px;
    margin: 10px 0;
    @include fontDim(13px,13px,0);
    font-weight:  $font-weight--bold;
    text-transform: uppercase;

  	@include mq('phone') {
		margin-bottom: 30px;
	}

	a {
		color: $color--white;
		text-decoration: none;
		background-color: $color--primary-1;
		border: 1px solid $color--primary-1;
	}
}

// modules

	.main-hero {
		margin: 15px 0;
	}

	.twin-promo {

		.shg-btn-wrapper {

	      	a {
	      		color: $color--primary-1;
				background-color: transparent !important;
				border: 1px solid $color--primary-1;
		     }
		}

	}

	.trio-promo {

	}

	.img-txt {
		display: flex;
	    justify-content: center;
	    align-items: center;
	    padding: 20px;
		margin: 30px 0;

		.shogun-image-container {
			width: 65%;
			margin: 0 auto;
		}

		.text-container {
		    min-height: auto !important;
		    height: auto;
		    width: 35%;
		    padding: 50px;
		    text-align: center;
		}

	}

	.sub-hero {
		img {
			margin: 15px 0;
		}
	}
}