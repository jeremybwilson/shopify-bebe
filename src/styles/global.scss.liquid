@charset "UTF-8";

*, :after, :before {
  box-sizing: border-box
}


// note: use @include fontSize(__px) to indicate all font sizes.
html { 
  font-size: 16px;
  padding-bottom: 0 !important; // Cart drawer adds weird padding...

  @include mq( 'phone' ) {
    overflow-x: hidden;
  }
}

html, body {
  height: 100%;
}

/* 
  Grid
  ----------
================================================== */
@import url('./global/global-grid.scss.liquid');

/* 
  Typography
  ----------
  All type styles can be found here
================================================== */
  @import url('./global/global-typography.scss.liquid');


// Prevent sidways scrolling past page bounds on old iOS devices (9 and earlier)
body > .page-wrap {
  overflow-y: auto;
  overflow-x: hidden;
}
.gridlock .row {
  @include mq('phone') {
    width: 100%;
    padding-left: 24px;
    padding-right: 24px;    
  }
}

.homepage-section {
  margin-bottom: 40px;
}

@mixin bgGradient {
  background: {{ settings.background }};
  background: -moz-linear-gradient(top, #f8f7f8 140px, {{ settings.background }} 200px);
  background: -webkit-linear-gradient(top, #f8f7f8 140px,{{ settings.background }} 200px);
  background: linear-gradient(to bottom, #f8f7f8 140px,{{ settings.background }} 200px);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f8f7f8', endColorstr='{{ settings.background }}', GradientType=0 );
}

.tablet-and-up--hide {
  @include mq('lap-and-up') {
    display: none !important;
  }
}

.tablet-and-down--hide {
  display: none !important;

  @include mq('lap-and-up') {
    display: inherit !important;
  }
}

// Page Background (Design wanted a gradient stylization)
#PageContainer {
  //@include bgGradient;
}

#content {
  position: relative;
  //padding: 0 0 100px 0;
  padding: 60px 0;

  // special pages that don't need padding at the top

  body.collection &,
  body.product & {
    padding-top: 0;
  }
  body.product & {
    padding-bottom: 20px;
  }

  body.page-landing &,
  body.page-faq &,
  body.page-contact & {
    max-width: 1200px;
  }
}

// Breadcrumbs 
#breadcrumb {
  @include fontDim( 10px, 10px, .04em );
  color: $color--accent-1;
  text-transform: uppercase;

  margin: 15px auto;
  padding-left: 0;

  @include mq( 'phone' ) {
    width: 100vw;
  }
  
  @include mq( 'lap-and-up' ) {
    top: 38px;
  }

  a {
    color: $color--accent-1;
  }

  .separator {}

  .page-title {}
}


.animate25 { transition: all 0.25s ease-in-out; }
.animate50 { transition: all 0.50s ease-in-out; }

.errors {
  color: $color--error;

  li {
    margin-bottom: 20px;
  }
}


.shopify-section:last-child {
  margin-bottom: 0px !important;
}

