.coupon-section {
  margin: 16px 0;

  .blocks2 {
    .coupon:first-child {
      margin-bottom: 16px;
    }

    @include mq('tablet-and-up') {
      @include flexbox;
      @include justify-content(space-between);

      .coupon {
        width: 50%;

        &:first-child {
          margin-right: 16px;
          margin-bottom: 0;
        }
      }
    }
  }

  .coupon {
    padding: 2%;
    width: 100%;

    @include mq('phone') {
      padding: 4%;

      h3 {
        text-align: center;
      }

      div.copy {
        text-align: center;
      }

      div.cta {
        text-align: center;

        a {
          width: 100%;
        }
      }

      div.details label {
        text-align: center;
      }
    }

    &.medium-gray {
      background-color: #dadada;
    }

    &.light-gray {
      background-color: #ececec;
    }

    &.white {
      width: calc(100% - 4px);
      background-color: $color--white;
      border: 1px solid #eee;
      box-shadow: 2px 2px 3px #888888;
    }

    h3 {
      text-transform: uppercase;
      font-size: 16px;
      font-weight: 700;
      letter-spacing: 1px;
      line-height: 1.5;
      margin-bottom: 10px;
    }

    div.copy {
      margin-bottom: 15px;
      color: #666;
    }

    div.cta a {
      color: $color--white;
      font-size: 15px;
      font-style: normal;
      letter-spacing: 1px;
      cursor: pointer;
      overflow: visible;
      text-transform: uppercase;
      background-color: #000;
      padding: 10px 15px;
      display: inline-block;
      border: 0;
      border-radius: 0;
    }

    div.details label {
      display: block;
      text-decoration: underline;
      color: #666;
      text-transform: uppercase;
      letter-spacing: .7px;
      font-size: 10px;
    }

    .additional {
      display: none;

      &.open {
        display: block;
      }
    }
  }
}