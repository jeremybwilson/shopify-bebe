#shopify-section-coupon {
  .coupon-section {
    margin: 16px 0;
  
    h2 {
      // margin-left: -1.04167%;
      // margin-right: -1.04167%;
      padding: 15px 0;
      // width: 102.08333333%;
      font-size: 20px;
      letter-spacing: 2px;
      color: #000;
      text-transform: uppercase;
      font-weight: 700;
      border-bottom: 1px dotted #000;

      @include mq('phone') {
        margin: 0 24px;
      }
    }
  
    div.subheader {
      // margin: 20px -1.04167%;
      margin: 20px 0;
      // width: 102.08333333%;
      font-size: 14px;

      @include mq('phone') {
        margin: 20px 24px;
      }
    }
  
    div.row {
      width: 100%;
      margin-right: 0;
      margin-left: 0;
  
      @include mq('tablet-and-up') {
        @include flexbox;
        @include justify-content(space-between);
        @include flex-wrap(wrap);
    
        .coupon.size-half {
          width: calc(50% - 8px);
    
          // &+.coupon.size-half {
          //   width: calc(48% - 16px);
          // }
        }
      }
  
      &:after {
        display: none;
      }
  
      .coupon {
        margin: 0 0 16px 0;
        padding: 2%;
        width: 100%;
    
        @include mq('phone') {
          padding: 4%;
    
          h3 {
            text-align: center;
          }
    
          div.copy {
            text-align: center;
          }
    
          div.cta {
            text-align: center;
    
            a {
              width: 100%;
            }
          }
    
          div.details label {
            text-align: center;
          }
        }
    
        &.medium-gray {
          background-color: #dadada;
        }
    
        &.light-gray {
          background-color: #ececec;
        }
    
        &.white {
          width: calc(100% - 4px);
          background-color: $color--white;
          border: 1px solid #eee;
          box-shadow: 2px 2px 3px #888888;
        }
    
        h3 {
          text-transform: uppercase;
          font-size: 16px;
          font-weight: 700;
          letter-spacing: 1px;
          line-height: 1.5;
          margin-bottom: 10px;
        }
    
        div.copy {
          margin-bottom: 15px;
          color: #666;
        }
    
        div.cta a {
          @include buttonDefaultStyle;
          color: $color--white;
          overflow: visible;
          background-color: #000;
          display: inline-block;
        }
    
        div.details label {
          display: block;
          text-decoration: underline;
          color: #666;
          text-transform: uppercase;
          letter-spacing: .7px;
          font-size: 10px;
        }
    
        .additional {
          display: none;
    
          &.open {
            display: block;
          }
        }
      }
    }
  }
}