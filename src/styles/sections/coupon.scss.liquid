.coupon-section {
  margin: 16px 0;

  .blocks2 {
    display: flex;
    justify-content: space-between;

    .coupon {
      width: 50%;

      &:first-child {
        margin-right: 16px;
      }
    }
  }

  .coupon {
    padding: 2%;
    width: 100%;

    &.medium-gray {
      background-color: #dadada;
    }

    &.light-gray {
      background-color: #ececec;
    }

    &.white {
      background-color: #fff;
      border: 1px solid #eee;
      box-shadow: 2px 2px 3px #888888;
    }

    h3 {
      text-transform: uppercase;
      font-size: 16px;
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 10px;
    }

    div.copy {
      margin-bottom: 15px;
      color: #666;
    }

    div.cta a {
      color: #fff;
      font-size: 15px;
      font-style: normal;
      letter-spacing: 1px;
      cursor: pointer;
      overflow: visible;
      text-transform: uppercase;
      background-color: #000;
      padding: 10px 15px;
      display: inline-block;
      border: 0;
      border-radius: 0;
    }

    div.details label {
      display: block;
      text-decoration: underline;
      color: #666;
      text-transform: uppercase;
      letter-spacing: .7px;
      font-size: 10px;
    }

    .additional {
      display: none;

      &.open {
        display: block;
      }
    }
  }
}