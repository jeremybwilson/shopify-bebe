@charset "UTF-8";


#subpage {
  @include flexbox;
  @include flex-direction(column);
  @include justify-content(flex-end);

  margin-right: 27px;
  margin-left: 27px;

  @include p;

  @include mq( 'lap-and-up' ) {
    @include flex-direction(row);
  }
  @include mq( 'desk-and-up' ) {
    padding-left: 15%;
  }

  // SUBPAGE : Left-nav

  div.left-nav {
    margin: 0 0 25px 0;
    @include mq( 'lap-and-up' ) {
      @include flex-basis(220px);
      padding-right: 20px;
    }
    @include mq( 'desk-and-up' ) {
      @include flex-basis(300px);
    }

    div.desktop-left-nav {
      display: none;

      @include mq( 'lap-and-up' ) {
        display: block;
      }

      ul > li {
        margin-bottom: 0px;

        &:before {
          content: " ";
          margin-right: 0;
        }

        a {
          color: $color--primary-2;
        }
      }
    }
  }

  .left-nav--categories {
    @include mq("lap-and-up") {
      display: none;
    }

    .opener {
      @include flexbox;
      @include justify-content(space-between);
      @include align-items(center);
      width: 100%;
      padding: 10px 15px;
      background: $color--gray-1;
      color: $color--white;
      font-weight: $font-weight--book;
      @include fontSize(14px);

      svg {
        width: 10px;
        transition: transform .25s ease;
        * {
          fill: $color--white;
        }
      }

      &.is-on {
        svg {
          transform: rotate(-180deg);
        }
      }
    }

    div.dropdown {
      display: none;
      float: left;
      width: 100%;
      background: $color--light-gray;
      padding: 10px 15px;

      a {
        float: left;
        width: 100%;
        color: $color--primary-2;
        margin-bottom: 15px;
      }
    }
  }

  div.page-content-field {
    @include mq( 'lap-and-up' ) {
      @include flex-basis(100%);
    }
  }

  // SUBPAGE : Content : Columns for Shipping

  .shipping-guide-chart {

    @include flexbox;
    @include flex-direction(column);
    margin: 10px 0 20px 0;

    @include mq( 'tablet-and-up' ) {
      @include flex-direction(row);
    }

    .col {
      padding: 20px 30px;
      border: 1px dotted $color--white;
      background: $color--primary-1;
      color: $color--white;
      text-align: center;

      @include mq("tablet-and-up") {
        width: 33%;
        padding: 20px;
      }
    }
  }

  .career-button, .return-button {
    background-color: $color--primary-1;
    color: $color--white;
    text-decoration: none;
    @include fontSize(12px);
    font-weight: $font-weight--book;
    @include flexbox;
    @include justify-content(flex-start);

    @include mq('tablet-and-up'){
      @include fontSize(15px);
      padding: 15px 30px;
      margin: 20px 0;
      width: 190px;
    }
  }

}
