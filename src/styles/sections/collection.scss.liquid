// COLLECTION.SCSS
// -- sections/collection-template.liquid


/*  COLLECTION: Core Variables
 * ---------------------------------------------- */
$resultsTextColor: {{ settings.filter_text_color }};


/*  COLLECTION: Banner
 * ---------------------------------------------- */
.collection-banner {
    margin-top: 0;
    
    img {
        width: 100%;
    }

    .asset-desk {
        display: none;
    }

    @include mq( 'lap-and-up' ) {
        .asset-mob {
            display: none;
        }
        .asset-desk {
            display: block;
        }
    }    
}

.gridlock .row .collection-banner--mobile {
    margin-left: 0;
    margin-right: 0;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw;
}

.has--category-banner {
    display: none;
}
.collection-banner + #breadcrumb {
  @include mq( 'lap-and-up' ) {
    padding-left: 0px;
  }

  @include mq( 'desk-and-up' ) {
    padding-left: 0px;
  }    
}

/*  COLLECTION : Title
 * ---------------------------------------------- */
.collection--title {
    width: 100%;
}

/*  COLLECTION : Main styling block
 * ---------------------------------------------- */
#shopify-section-collection-template,
#search-template {

    /* COLLECTION : Sidebar
     * ---------------------------------------------- */
    @import url('../snippets/collection-nav.scss.liquid');

    /* COLLECTION : Main
     * ---------------------------------------------- */
    #collection--main {
        @include mq( 'lap-and-up' ) {
            width: 82.5%; // [FPO] number
        }
    }
    h1 {
        // display: none;
        border: none;
        @include fontDim(21px,21px,.04em);

        // @include mq( 'lap-and-up' ) {
        //     display: block;
        // }
    }

    #breadcrumb {
        display: none;

        @include mq( 'lap-and-up' ) {
            display: block;
        }
    }

    /* COLLECTION : Product Grid + Item View
     * ---------------------------------------------- */
    .collection-template {

        @import url('../snippets/product-grid.scss.liquid');
    }
    

    /* FILTERS : Styling for filter sets
     * ---------------------------------------------- */
    @import url('../snippets/filters.scss.liquid');
}


/* RESULTS COUNT : 
 *    # of results on a collection page, only shown
 *    when filters are present so only applies here.
 *
 *    (NOTE: #results-count in breadcrumbs.liquid)
 * ---------------------------------------------- */
#results-count {
    display: none;
    @include h7;
    @include fontSize( 16px );
    position: static;
    top: auto;
    color: $resultsTextColor; //Imported from filters.scss.liquid
    font-weight: $font-weight--bold;

    @include mq( 'lap-and-up' ) {
        position: absolute;
        top: 0;
        right: 2px;
        left: auto;
    }
}

// Footer results count on collection template
.collection-results-count {
    // @include fontSize( 16px );
    margin: 15px 0;
    text-align: right;
    color: $resultsTextColor; //Imported from filters.scss.liquid
}
