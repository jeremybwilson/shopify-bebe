@import url('../snippets/product-campaign-video.scss.liquid');

#recently-viewed-products--wrapper {
  @include bgGradient;
  margin-top: 0;
  padding-top: 50px;
  padding-bottom: 35px;

  @include mq('tablet-and-up') {
    padding-top: 100px;
    padding-bottom: 70px;
  }

  .price {

    & > div {
      display: inline;
    }
    .onsale {
      color: {{ settings.sale_color }}
    }
    .was {
      color: $color--primary-2;
    }
  }  
}
