@charset "UTF-8";

/*==================
  PDP
 ==================*/

.product {
  #breadcrumb {
    @include fontSize(14px);

    @include mq('tablet-and-up') {
      @include fontSize(16px);
    }
    & > *:nth-last-child(-n+3) {
      // hides and shows the page-title, the separator before it, and the #results-count div
      display: none;

      @include mq('tablet-and-up') {
        display: inline;
      }
    }
  }
}

.product--mobile-header {
  position: relative;
  padding: 12px 10px 12px;
  margin-top: 15px;
  margin-bottom: 25px;

  @include mq('tablet-and-up') {
    display: none;
  }
  
  &:after {
    position: absolute;
    content: '';
    top: 100%;
    left: 0;
    height: 25px;
    width: 100%;
    opacity: .25;

    background: #ffffff;
    background: -moz-linear-gradient(top, #d9d9d9 0%, #ffffff 100%);
    background: -webkit-linear-gradient(top, #d9d9d9 0%,#ffffff 100%);
    background: linear-gradient(to bottom, #d9d9d9 0%,#ffffff 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d9d9d9', endColorstr='#ffffff',GradientType=0 );    
  }


  .mobile-header--top {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);

    .header-text {
      padding-right: 10px;  
    }
  }  

  .product-title {
    color: $color--primary-2;
    @include fontDim(16px,16px,0);
    font-family: $sans--2;
    font-weight: $font-weight--medium;
    text-transform: uppercase;
  }
  .money {
    @include fontSize(15px);
  }

  .add {
    margin: 0;
    max-width: 92px;
    padding: 6px 8px;
    @include fontSize(12px);
    line-height: 14px / 12px * 1em;
    outline: none;
    white-space: normal;
    @include align-self( flex-start );
  }
  .add[disabled] {
    @include fontSize(8px);
  }
  .errors {
    width: 100%;
  }
}

#shopify-section-product-template {
  margin-top: 0;

  @include mq('tablet-and-up') {
    margin-top: 40px;
  }
}

.row.product-details--top {
  @include flexbox;
  @include flex-direction(row);
  @include align-items(flex-start);
  @include justify-content(space-between);

  @include mq('tablet-and-up') {
    width: 1350 / 1440 * 100%;
    max-width: 1350px;
    margin: 0 auto 72px;
  }
}

.product {
  #content {
    h1 {
      color: $color--primary-2;
      @include fontDim(15px,16px,0);
      font-weight: $font-weight--medium;
      text-align: center;
      text-transform: uppercase;

      &.product-name {
        padding-top: 0;
      }

      @include mq('phone') {
        display: none;
      }

      @include mq('tablet-and-up') {
        @include fontDim(22px,32px,0);
      }
    }
  }
}

/* Product Images Snippet
 * ---------------------------------------------- */

@import url('../snippets/product-images.scss.liquid');


#product-price {
  border-bottom: none;
  color: $color--primary-2;
  font-weight: $font-weight--book;
  @include fontDim( 16px, 16px, 0 );
  text-align: center;
  font-family: $sans--2;
  margin-bottom: 18px;

  @include mq('phone') {
    display: none;
  }

  @include mq('tablet-and-up') {
    @include fontSize(22px);
  }

  &.has-compare-price {
    .product-price {
      color: {{ settings.sale_color }}
    }
    .was {
      color: $color--primary-2;      
    }
  }
}

#product-right {
  margin-left: 0;
  margin-right: 0;

  @include mq('tablet-and-up') {
    max-width: 500px;
  }
}


#product-description {
  position: relative;

  form {
    padding-top: 0;
    border-top: none;
    border-bottom: none;
  }
}


/* Product Form Snippet
 * ---------------------------------------------- */
@import url('../snippets/product-form.scss.liquid');



/* Product Accordions (Shipping / Size Chart)
 * ---------------------------------------------- */
.product-accordion {
  @include flexbox;
  @include flex-direction(column);
  width: 100%;
  padding: 10px 0;
  margin: 0;
  border-top: 1px solid $color--light-gray;

  // header & accordion trigger
  .product-accordion--header {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);
    cursor: pointer;
    text-decoration: none;

    &:hover {
      text-decoration: none;
    }

    & > svg {
      width: 21px;
      height: 21px;
      margin-right: 5px;

      @include mq('tablet-and-up') {
        width: 36px;
        height: 36px;
        margin-right: 12px;
      }

      * {
        fill: $color--primary-1;
      }
    }

    h3 {
      margin-top: 3px;
      color: $color--primary-1;
      @include fontDim(14px,14px,0);
      font-weight: $font-weight--medium;
      text-transform: uppercase;

      @include mq('tablet-and-up') {
        margin-top: 5px;
        @include fontDim(16px,16px,0);
      }
    }

    .opener {
      margin-left: auto;
      background: $color--primary-1;
      width: 15px;
      height: 3px;
      transition: all 0.25s ease-in-out;
    }
  }


  .product-accordion--header.open {
    .opener {
      width: 3px;
      height: 15px;
    }
  }

  // content
  .product-accordion--content {
    display: none;
    margin-top: 16px;
    padding-right: 10px;

    @include mq('tablet-and-up') {
      padding-right: 24px;
    }
    p {
      @include fontDim(16px,25px,.025em);
    }
  }
}



/* Product Description
 * ---------------------------------------------- */
#product-description-body {
  font-family: $sans--2;

  p {
    @include fontDim( 15px, 20px, 0 );
    margin-bottom: 20px;
  }

  a {
    text-decoration: underline; // Ew.. 
  }
}

/* Social Icons (Description)
 * ---------------------------------------------- */
#product-description-social {
  @include flexbox;
  @include justify-content( flex-end );
  position: relative;
  width: 100%;
  list-style: none;
  margin: 20px 0;
  right: -2px; //Slight alignment for visual 

  > li {
    width: 25px;

    &:not(:last-child) {
      margin-right: 20px;
    }

    path, i {
      fill: $color--primary-1;
      color: $color--primary-1;
      transition: all 0.25s ease-in-out;
    }

    &:hover {
      path, i {
        fill: $color--accent-1;
        color: $color--accent-1;
      }
    }
  }
}


.product-description--icons {
  @include flexbox;
  @include flex-wrap(wrap);
  @include justify-content(center);
  @include align-items(flex-start);
  margin: 15px -10px; // neg margins to accommodate item padding

  @include mq('tablet-and-up') {
    @include justify-content(flex-start);
    margin-top: 30px;
  }

  li {
    @include flexbox;
    @include flex-direction(column);
    @include justify-content(center);
    margin: 0 10px 20px;
    max-width: 80px;
    padding-left: 0;
    list-style: none;
    text-align: center;

    &:before {
      display: none;
    }
  }

  img {
    max-width: 54px;
    margin: 0 auto 12px;
  }
  span {
    color: $color--primary-2;
    font-weight: $font-weight--bold;
    @include fontDim(13px,18px,.025em);
  }
}




/* Product Campaign Video
