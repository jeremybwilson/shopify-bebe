/* Social Icons (Description)
 * ---------------------------------------------- */
#product-description-social {
  @include flexbox;
  @include justify-content( center );
  position: relative;
  width: 100%;
  list-style: none;
  margin: 20px 0;

  @include mq( 'tablet-and-up' ) {
    @include justify-content( flex-end );
    right: -2px; //Slight alignment for visual 
  }

  > li {
    width: 25px;

    &:not(:last-child) {
      margin-right: 20px;
    }

    .icon-android {
      margin-top: -4px;
    }

    path, i {
      fill: $color--primary-1;
      color: $color--primary-1;
      transition: all 0.25s ease-in-out;
    }

    &:hover {
      path, i {
        fill: $color--accent-1;
        color: $color--accent-1;
      }
    }
  }
}

#product-description-social a {
  @include fontDim(25px, 16px, 0);
  display: block;
  line-height: 0;
}

#product-description-social svg {
  display: inline-block;
  vertical-align: middle;
  width: .75em;
  height: .75em;
  fill: currentColor;
}

.product-description--icons {
  @include flexbox;
  @include flex-wrap(wrap);
  @include justify-content(center);
  @include align-items(flex-start);
  margin: 15px -10px; // neg margins to accommodate item padding

  @include mq('tablet-and-up') {
    @include justify-content(flex-start);
    margin-top: 30px;
  }

  li {
    @include flexbox;
    @include flex-direction(column);
    @include justify-content(center);
    margin: 0 10px 20px;
    max-width: 80px;
    padding-left: 0;
    list-style: none;
    text-align: center;

    &:before {
      display: none;
    }
  }

  img {
    max-width: 54px;
    margin: 0 auto 12px;
  }
  span {
    color: $color--primary-2;
    font-weight: $font-weight--bold;
    @include fontDim(13px,18px,.025em);
  }
}




