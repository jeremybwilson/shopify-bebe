@charset "UTF-8";


#faq {
	h1 {
        padding: 0;
        margin: 0;

        &.faq-title {
            @include fontSize(16px);
            margin-bottom: 10px;
            color: $color--primary-1;
            font-weight: $font-weight--bold;
            line-height: 1.375em;
            letter-spacing: 2px;
            text-transform: uppercase;
            padding: 10px 0 14px;
            border-bottom: dotted 1px #000;

        }
    }
    h2 {
        &.heading {
            margin-top: 0;
            @include fontSize(12px);
            color: $color--primary-1;
            margin-bottom: 20px;
        }
    }
	h4 {
		display: inline-block;
		width: 90%;
		line-height: 2;
		margin: 0;
	}
	h5 {
		margin: 0 0 15px 0;
	}
	p {
		margin: 0;
    }
    h3>a {
        font-weight: $font-weight--book;
        color: $color--accent-1;
    }
	.toggle .opener {
		float: right;
	}
	.toggle .opener svg {
		display: inline-block;
		width: 10px;
	    height: 10px;
	    transition: transform .25s ease;
	    transform-origin: center;
	}
	.toggle-title {
		padding: 15px 0;
		border-bottom: 1px solid #e5e5e5;
	}
	.toggle-title.active {
		border-bottom: none;
	}
	.toggle-title.active h4 {
		color: $color--accent-2;
	}
	.toggle-title.active svg {
		transform: rotate(180deg);
	}
	.toggle-inner {
		display: none;
		margin: 10px 0;
	}

	.fineprint {
    	margin-top: 30px;
    	p {
    		font-size: 11px;
    	}
	}
}