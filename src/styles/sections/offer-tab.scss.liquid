@charset "UTF-8";

.offer-tab {
  height: initial;
  line-height: 1;
  background-color: $color--primary-1;
  color: $color--reverse-1;
  position: fixed;
  text-align: center;
  transform: rotate(-90deg);
  margin-right: -56px;
  margin-bottom: 0;
  top: 50%;
  right: 0%;
  z-index: 1000;
  display: block;
  font-family: $sans--2;
  font-weight: $font-weight--book;

  @include mq('phone') {
    display: none;
  }

  &.fancybox-margin {
    margin-right: -56px + 15px;
  }
}

a.offer-tab__label {
  @include fontSize(15px);
  display: inline-block;
  color: inherit;
  padding: 15px 4px 15px 15px;

  &:hover {
    text-decoration: none;
    color: $color--reverse-1;
  }
}

.offer-tab__cross {
  @include fontSize(12px);
  cursor: pointer;
  padding: 15px 15px 15px 4px;
  position: relative;
  display: inline-block;
  line-height: 0;
  color: $color--reverse-1;

  svg {
    width: 1em;
    height: 1em;
    stroke: $color--reverse-1;
    color: inherit;
    stroke-width: 2px;
  }
}
