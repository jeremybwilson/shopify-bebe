// HEADER.SCSS
// -- sections/header.liquid
// -- snippets/header-announcement-bar.liquid


/*  HEADER : Core Styles
 * ---------------------------------------------- */
$navBoxShadow: 0px 1px 9px #8d8d8d;
$navShadowAni: box-shadow 0.25s ease-in-out;
$navMobileBarGutter: 5px;
$navMinorBorder: 1px solid {{ settings.nav_minor_border_color }};
$zIndexBackingShadow: -1;
$zIndexMobileMenu: 5;
$zIndexBarBG: 25;
$zIndexButtons: 50;
$zIndexUserBtns: 65;
$zIndexLogo: 75;
$navBarDesktopHeight: 128px;
$navHeaderColor: {{ settings.nav_header_color }};
$navSubHeaderColor: {{ settings.nav_sub_header_color }};
$navListItemColor: {{ settings.nav_list_item_color }};
$navHoverColor: {{ settings.nav_hover_color }};

$color--super-hot-neon-pink: #ff009c;

@mixin typeNeon {
    color: $color--reverse-1;
    text-shadow: 0 0 1.7px $color--super-hot-neon-pink;
    -webkit-text-stroke: .75px $color--super-hot-neon-pink;

    @include mq( 'ie-high-contrast' ) {
        color: $color--super-hot-neon-pink;
        text-shadow: none;
    }
}


#header-section {
    position: relative;
    //margin-top: 0 !important; //The sticky nav plugin adds margin to the parent but isn't necessary, this prevents it.
    font-family: $sans--2;
}

/* SNIPPET : Header-Announcement-Bar
 *           (Promos bar on top of nav bar)
 * ---------------------------------------------- */
 @import url('../snippets/header-announcement-bar.scss.liquid');


/*  NAV : Styles for the Nav-Bar portion
 * ---------------------------------------------- */
#nav-bar-wrapper {
    position: relative;
    width: 100%;
    padding: 0;
    background: $color--reverse-1;
    z-index: 1000; //entire wrapper, this relates to the header to rest of site so no need var
    //transition: $navShadowAni;

    @include mq( 'lap-and-up' ) {
        background: $color--reverse-1;
    }

    & > .row {
        width: 100%;
        margin: 0;
        padding: 0;
    }

    // SHADOW : When stick nav is active
    /* &.isStuck {
        box-shadow: $navBoxShadow;

        #nav-logo-backing {
            box-shadow: $navBoxShadow;
        }
    } */

    // @include mq( 'lap-and-up' ){
    //     height: $navBarDesktopHeight;
    // }

    /*  NAV : ACCOUNT + CART + SEARCH + SITE PICKER (Right Elements)
     * ---------------------------------------------- */
    #nav-aux {
        @include mq( 'lap-and-up' ) {
            @include flexbox;
            @include justify-content( space-between );
            height: 36px;
            padding: 0 10px;
            border-bottom: solid 1px $color--field-1;
        }
    }

    // TOP-LEFT HIGHLIGHT LINK: Goes to "Bebe Babes" right now but could go somewhere else so hardcoded for now

    .header--top-left--highlight {
        display: none;

        @include mq('lap-and-up') {
            @include flexbox;
            width: 25%;
            height: 100%;
        }
        @include mq('desk-and-up') {
            width: 20%;
        }

        a {
            @include mq( 'lap-and-up' ) {
                @include flexbox;
                @include justify-content( flex-start );
                @include align-items( center );
                @include flex-wrap( nowrap );

                position: relative;
                z-index: 2;
                margin-right: auto;
            }
        }
        svg {
            width: 16px;
            margin-right: 10px;

            * {
                fill: $color--primary-1;
            }
        }
        span {
            color: $color--primary-1;
            @include fontDim( 12px, 12px, .04em );
            font-weight: $font-weight--medium;
            text-transform: uppercase;
            white-space: nowrap;
        }

        .nav-item {
            @include inline-flex;
            @include align-items( center );
            @include justify-content( center );
            height: 100%;
            margin-left: 0;

            a,
            .inner-center {
                @include inline-flex;
                @include align-items( center );
                @include justify-content( center );
                width: 40px;
                height: 40px;
                padding: 7px;
                text-decoration: none;

                @include mq( 'lap-and-up' ) {
                    width: 100%;
                    height: 100%;
                    padding: 0 7px;
                }
            }

            // Account, Cart, etc icons all congruent size
            svg {
                width: 19px;
                height: 17px;
            }

            i {
                @include inline-flex;
                @include align-items( center );
                font-size: 20px;
                height: 100%;
            }
        }

        // SITE PICKER : Dropdown selector for the other site pickers

        .nav-currencies-picker {
            width: 40px;
            position: relative;

            @include mq( 'lap-and-up' ) {
                width: 77px;
            }

            .current-country {
                top: -20px;
                right: 0;

                @include mq( 'lap-and-up' ) {
                    top: 0;
                }
            }


            .current-country-container {
                .hidden-sm-down {
                    display: none;

                    @include mq( 'lap-and-up' ) {
                        display: block;
                    }
                }
                .hidden-sm-down + .hidden-sm-down {
                    display: none;
                }
            }
        }
    }

    #nav-user {
        position: relative;

        @include mq( 'lap-and-up' ) {
            height: 100%;
            margin-left: auto;
        }

        // Account / Cart / Site Picker List
        ul#nav-user-list {
            @include inline-flex;
            @include justify-content( flex-end );
            position: absolute;
            height: 100%;
            top: 23px;
            //right: $navMobileBarGutter;
            right: 0;
            margin: 0;
            list-style: none;
            text-align: right;
            z-index: $zIndexUserBtns; //50

            @include mq( 'phone' ) {
                right: 3px;
            }

            @include mq( 'ie-high-contrast' ) {
              position: relative;
            }

            @include mq( 'lap-and-up' ) {
                top: 0;
                right: 0;
            }

            .nav-item {
                @include inline-flex;
                @include align-items( center );
                @include justify-content( center );
                height: 100%;
                margin-left: 0;

                a,
                .inner-center {
                    @include inline-flex;
                    @include align-items( center );
                    @include justify-content( center );
                    width: 30px;
                    height: 30px;
                    padding: 5px;
                    text-decoration: none;

                    @include mq( 'lap-and-up' ) {
                        width: 100%;
                        height: 100%;
                        padding: 0 7px;
                    }
                }

                // Account, Cart, etc icons all congruent size
                svg {
                    width: 19px;
                    height: 17px;
                }

                i {
                    @include inline-flex;
                    @include align-items( center );
                    font-size: 20px;
                    height: 100%;
                }
            }

            // HIDE : MOBILE : Don't show sites, currency or search nav-items on mobile
            .nav-sites,
            .nav-search,
            .nav-currency {
                display: none;
                @include justify-content( center );

                @include mq( 'lap-and-up' ) {
                    @include inline-flex;
                }
            }

            .nav-sites {
                @include align-items( flex-start );
                position: relative;
                margin-top: -15px;
                top: 50%;

                ul.sites-picker {
                    width: 65px;
                    height: 35px;
                    list-style: none;
                    overflow: hidden;
                    background: {{ settings.header_background }};
                    transition: height 0.25s ease-in-out;

                    &:hover {
                        height: auto;

                        li:first-child {
                            border-bottom: $navMinorBorder;
                        }
                    }

                    li {
                        width: 100%;
                        height: 35px;
                        cursor: pointer;
                        background: {{ settings.header_background }};
                        transition: background 0.25s ease-in-out;

                        // BORDER : Border on all but first (till hovered) and last
                        &:not(:last-child) { border-bottom: $navMinorBorder; }
                        &:first-child {
                            border: none;

                            // Hide top item country code, its obvious and makes nice spot for arrow indicator
                            .site-name { opacity: 0; }
                        }

                        // HOVER : On a country option
                        &:hover {
                            background: $color--primary-2;

                            .site-name  {
                                color: {{ settings.header_background }}; //Use bg color when swapping
                                background: $color--primary-2;
                            }
                            .site-arrow { opacity: 0; }

                            &:first-child {
                                .site-name { opacity: 1; }
                            }
                        }

                        .site-flag {
                            height: 17px;
                            margin-right: 4px;
                        }

                        .site-name {
                            background: {{ settings.header_background }};
                            transition: all 0.25s ease-in-out;
                            padding: 0 2px;
                            z-index: 10; // appear on top of arrow
                        }

                        .site-arrow {
                            position: absolute;
                            width: 9px;
                            height: 7px;
                            right: 10px;
                            top: 13px;
                            z-index: 5;
                            transition: opacity 0.25s ease-in-out;

                            svg {
                                position: absolute;
                                height: 100%;
                                width: 100%;
                                left: 0;
                                top: 0;
                            }
                        }
                    }
                }
            }

            // ACCOUNT : User account item
            .nav-account-item {

                &:hover {
                    .icon-account {
                        fill: {{ settings.nav_links_hover }};
                    }
                }

                span {
                    display: none;

                    @include mq( 'lap-and-up' ) {
                        display: block;
                        margin-left: 4px;
                        color: $color--primary-1;
                        font-weight: $font-weight--medium;
                        @include fontDim( 12px, 12px, .04em );
                        text-transform: uppercase;
                        white-space: nowrap;
                    }

                    &.my-account-text {
                        display: none;

                        @include mq('wide-and-up') {
                            display: block;
                        }
                    }
                }

                .icon-account {
                    width: 22px;
                    height: auto;
                    transition: fill 0.35s ease-in-out;
                    fill: {{ settings.nav_links }};

                    @include mq( 'lap-and-up' ) {
                        width: 18px;
                    }
                }
            }
            .swell-club {
                @include mq('phone') {
                    display: none !important;
                }

                @include mq('lap-and-up') {
                    color: $color--accent-1;
                }

                & > span {
                    color: inherit;
                }
            }


            // CART
            .nav-cart {
              position: relative;
              color: {{ settings.nav_links }}; //Legacy font-icon support for "bag" font icon

              &:hover {
                .fa-shopping-bag { color: {{ settings.nav_links_hover }}; }
                .icon-cart  { fill:  {{ settings.nav_links_hover }}; }
                //.cart-count { color: {{ settings.nav_links_hover }}; }
              }

              .icon-shopping-bag {

                @include mq( 'ie-high-contrast' ){
                  width: 21px;
                }
              }

              i.fa, // Support bag font-icon for now..
              .icon-cart {
                height: 22px;
                margin-right: 8px; // Space icon from cart #
                fill: {{ settings.nav_links }};
                color: {{ settings.nav_links }}; //For "Bag" insteaed of Cart icon (font icon)
                transition: fill 0.35s ease-in-out;
              }
              svg {
                width: auto;
                height: 23px;

                @include mq( 'lap-and-up' ) {
                    height: 21px;
                }
              }

              .cart-count {
                position: absolute;
                top: 5px;
                right: 0;
                width: 14px;
                height: 14px;
                border-radius: 50%;
                background: $color--primary-1;
                color: $color--reverse-1;
                @include fontDim( 11px, 14px, .04em );
                font-weight: $font-weight--medium;
                text-align: center;

                transition: color 0.35s ease-in-out;

                &.hidden-count {
                    display: none;
                }
              }
            }

            // LOYALTY STUB
            .loyalty-stub a {
                display: none;

                @include mq( 'lap-and-up' ) {
                    @include flexbox;
                    @include flex-direction( column );
                    @include align-items( center );
                    @include justify-content ( flex-start );
                    padding: 7px 10px 5px;
                    background: $color--field-1;

                    span {
                        color: $color--primary-1;

                        @include fontSize(13px);
                        line-height: 11px;
                        text-transform: uppercase;

                        &.line-2 {
                            color: $color--accent-1;
                        }
                    }
                }
            }
        }
    }


    // SEARCH : Input on mobile-navigation.liquid + header.liquid (desktop)
    .nav-search {
        position: relative;
        @include align-items( flex-start );

        width: 140px;
        padding-right: 23px;

        @include mq( 'desk-and-up' ) {
            width: 160px;
        }

        form {
            @include flexbox;
            @include align-items( center );
            @include justify-content( flex-end );
        }

        .nav-search-input {
            position: relative;
            width: 100%;
            max-width: 100%;
            min-height: 0;
            height: 20px;
            padding: 3px 0 5px;
            margin-right: 5px;
            margin-bottom: 0;
            border: none;
            border-bottom: $navMinorBorder;
            border-radius: 0;
            outline: none;

            color: #bbb;
            font-family: $sans--2;
            @include fontSize(12px);
            font-weight: $font-weight--medium;
            line-height: 1;
            text-indent: 0;
            text-transform: uppercase;

            @include mq( 'ie-high-contrast' ){
              line-height: normal;
            }

            @include mq( 'lap-and-up' ) {
                @include fontSize(12px);
            }

            &:focus {
                outline: none;
                box-shadow: none;
                color: $color--primary-1;
                border-bottom-color: $color--primary-1;
            }

            &::placeholder {
                color: #bbb;
                opacity: 1;
            }
            &:-ms-input-placeholder {
                color: #bbb;
            }
            &::ms-input-placeholder {
                color: #bbb;
            }
        }

        .nav-search-icon-wrap {
            position: absolute;
            top: -6px;
            right: 30px;
            padding-left: 4px;
            padding-right: 10px;

            @include mq( 'lap-and-up' ) {
                top: 9px;
                right: 0;
            }

            // Hidden search button on top of the search Icon,
            // so clicking it submits as well as enter.
            .nav-search-submit {
                position: absolute;
                opacity: 0;
                width: 100%;
                height: 100%;
                margin: 0;
                padding: 0;
                border-radius: 0;
            }

            svg.icon-search {
                width: 19px;
                height: 17px;
            }

            img {
                width: 20px;
                height: 20px;
            }
        }
    }


    /* NAV BG :
     *
     * Why? Because it lets use use rotated, box-shadows on logo
     * to make a mobile sticky nav with a nice minor box shadow
     * ---------------------------------------------- */
    #nav-bar-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: $zIndexBarBG; // 25
        background: {{ settings.header_background }};
    }

    #nav-bar {
        @include flexbox;
        @include flex-direction(column);
        @include justify-content(center);
        @include align-items(center);
        position: relative;
        width: 100%;
        max-width: 960px; //iPad
        margin: 0 auto;
        padding: 0;
        padding: 12px 0;

        @include mq( 'desk-and-up' ) {
            height: auto;
            max-width: 1200px;
            margin-top: 18px;
            padding: 0;
        }

        @include mq( 'wide-and-up' ){
            max-width: 1400px;
        }

        // SITE PICKER : Dropdown selector for the other site pickers
        .currencies-picker-list{
                    margin: 0 auto;
        }
        .nav-currencies-picker {
            display: none;
            left: 45px;
            list-style: none;
            position: absolute;
            width: 40px;

            @include mq ( 'phone' ) {
                display: block;
                top: 3px;
            }
            @include mq ( 'tablet' ) {
                display: block;
            }

            .current-country {
                position: relative;
                right: auto;
                top: 11px;

                @include mq( 'tablet' ) {
                    top: 4%;
                }
                
                @include mq( 'lap-and-up' ) {
                    top: auto;
                }
            }

            .current-country-container {
                .hidden-sm-down {
                    display: none;

                    @include mq( 'lap-and-up' ) {
                        display: block;
                    }
                }
                .hidden-sm-down + .hidden-sm-down {
                    display: none;
                }
            }
        }
    }


    /*  NAV : LOGO :
     * ---------------------------------------------- */
    #nav-logo,
    #nav-logo-backing {
        width: 120px;
        z-index: $zIndexLogo;

        @include mq( 'lap-and-up' ) {
            width: 136px;
            margin-top: 0;
        }

        a, svg {
            display: block;
            width: 100%;
            height: 100%;
            position: relative;

            .icon-header-logo {

              @include mq( 'ie-high-contrast' ){
                height: 24.5px;
              }

            }
        }
    }

    // SHADOW : This gives the sticky nav a box shadow on the logo point
    #nav-logo-backing {
        display: none !important; // Comment out to use this layer as a backing shadow for an over-the-bounds logo
        transition: $navShadowAni;
        //transform: translateX( -50% ) rotateZ( 45deg );
        background: {{ settings.header_background }};
        z-index: $zIndexBackingShadow; // -1, Relative to #nav-bar-wrapper, so its -1 on inner layer of nav-bar.
    }

    /*  NAV : MOBILE MENU ICON
     * ---------------------------------------------- */
    .icon-nav-mobile-menu {
        position: absolute;
        left: $navMobileBarGutter;
        width: 25px;
        height: 18px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        z-index: $zIndexButtons; // 50

        @include mq( 'lap-and-up' ) {
            display: none;
        }

        .bar {
            position: absolute;
            background: $color--primary-2;
            width: 100%;
            height: 4px;
            transition: all 0.25s ease-in-out;

            &.one   { top: 0; }
            &.two   {
                top: 50%;
                transform: translateY( -50% );
                // This should center the middle bar for reasons i don't understand
                margin-top: 1px;
            }
            &.three {
                top: 100%;
                transform: translateY( -50% )
            }
        }
    }

    /*  NAV : MEGA-MENU + SUB-NAV LINKS
     * ---------------------------------------------- */
    nav#nav {
        color: $color--text-1;
        display: none;

        @include mq( 'lap-and-up' ) {
            display: block;
        }

        // Nav-Category-Header
        .nav-category-header {
            //@include h5;
            height: 100%;
            text-decoration: none;
            text-transform: uppercase;
            color: $navHeaderColor;
        }
    }
    #nav-menu-desktop {
        position: relative;
        height: 100%;
        margin-top: 12px;

        #nav-menu-desktop-list {
            @include inline-flex;
            @include justify-content( space-around );
            @include align-items( center );
            position: relative;
            list-style: none;
            height: 100%;
            width: 100%;
            left: 0;
            padding: 0;
            margin: 0;
            z-index: $zIndexButtons;

            .nav-primary-link {
                @include inline-flex;
                @include justify-content( center ); // Space links to better match mock
                height: 100%;
                width: auto;
                margin: 0 4px;

                &.nav-list-simple {
                    position: relative;
                }

                .nav-category-header { //Center the nav link item vertically
                    @include inline-flex;
                    @include align-items( center );
                    @include fontSize( 16px );
                    letter-spacing: .5px;
                    padding-top: 1px; // make up size for 3px bottom border on links
                    padding-bottom: 3px;
                    padding-left: 12px;
                    padding-right: 12px;
                    border-bottom: 3px solid transparent;
                    white-space: nowrap;

                    @include mq( 'lap' ) {
                        padding-left: 6px;
                        padding-right: 6px;
                    }

                    @include mq( 'lap-and-up' ) {
                        @include fontSize( 13px );
                        font-weight: $font-weight--medium;
                    }
                }

                &.flash-sale .nav-category-header {
                    @include typeNeon;
                }
                


                &:hover a {
                    color: $color--accent-3;
                }

                &:hover {
                    .submenu {
                        display: block;
                    }
                }

                .submenu {
                    position: absolute;
                    top: 100%;
                    left: 50%;
                    width: 200px;
                    transform: translateX( -50% );
                    text-align: center;
                    list-style: none;
                    background: {{ settings.header_background }};
                    display: none;
                    padding: 15px 20px 5px;

                    li:hover a {
                        color: $navHoverColor;
                    }
                }
            }

            .megamenu {
                width: 100vw; // spans full width
                height: 180px;
                margin: 0;
                position: absolute;
                left: 50%; // scoot left distance (- spacing) #nav-menu-desktop-list elements over from edge
                transform: translateX( -50% );
                top: 30px;
                z-index: 5;
                padding: 20px 0 0;
                text-align: left;
                list-style: none;

                background: #fff;

                .mega-container {
                    margin: 0 auto;
                    height: 100%;
                    width: 100%;
                    left: 0px;
                    position: relative;
                    @include flexbox;
                    @include justify-content( center );

                    .mega-column-content {
                        position: relative;
                        @include flexbox;
                        height: 100%;
                        max-height: 160px;

                        @include mq( 'tablet-and-up' ) {
                            @include flex-direction( column );
                            @include justify-content( flex-start );
                            @include align-items( flex-start );
                            @include flex-wrap( wrap );

                            // one wide
                            width: 200px;

                            &.columns-2-wide {
                                width: 400px;
                            }
                            &.columns-3-wide {
                                width: 600px;
                            }
                        }

                        li {
                            float: none;
                            height: 20%;
                            width: 200px;
                            box-sizing: border-box;

                            &:hover a {
                                color: $navHoverColor;
                            }
                        }

                        .mega-stack {
                          //display: block;
                          display: none; // hide for now;
                          line-height: 30px;
                          margin-bottom: 20px;

                            li {
                              display: block;
                              width: 100%;
                              line-height: 26px;
                              overflow: hidden;
                            }
                        }
                    }

                    .mega-image {
                        @include inline-flex;
                        @include align-items( center );
                        position: relative;
                        width: 246px;

                        @include mq( 'wide-and-up' ) {
                            width: 246px;
                        }

                        a {
                            top: 0;
                            right: 0;
                            width: 100%;
                            height: 100%;
                            position: absolute;
                            background-repeat: no-repeat;
                            //background-size: cover;
                            background-size: contain;
                        }
                    }

                    // Spaces in menu (entries named '-')
                    .nav-list-space {
                        height: 26px;
                    }

                    a {
                        text-decoration: none;
                    }

                    // Sub Menu items

                    // Individual Sub-Sub-items (items inside nested lists)
                    .nav-sub-sub-item {
                        float: none;
                        margin: 8px 0;

                        // "Shop All >" Links in sub-nav
                        &.shop-all a {
                            @include h7;
                            position: relative;

                            // TRAINGLE : CLOSED : Downward arrow in css
                            &:after {
                                width: 0;
                                height: 0;
                                position: absolute;
                                top: 50%;
                                transform: translateY( -50% );
                                right: -20px;
                                content: ""; // undo the preset arrow type
                                border-top: 4px solid transparent;
                                border-bottom: 4px solid transparent;
                                border-left: 8px solid {{ settings.nav_links_hover }};
                            }
                        }


                        // SUB-NAV : Regular Links to sub-collection divisions
                        a {
                            @include fontSize(13px);
                            color: $navListItemColor;
                            transition: color 0.25s ease-in-out;

                            &:hover {
                                color: {{ settings.nav_hover_color }};
                            }
                        }


                        // SALE : Sale gets unique color var from settings
                        {% if settings.enable_nav_name_styling %}
                            &.sale a {
                                color: {{ settings.nav_links_sale }};
                                font-weight: $font-weight--medium;
                            }
                        {% endif %}

                    }
                }

                .nav-sub-header,
                .nav-sub-header a {
                    @include fontSize(13px);
                    letter-spacing: 0; // Slightly thinner
                    text-transform: uppercase;
                    color: $navSubHeaderColor;
                }
            }
        }
    }

    #nav-search-mobile {
        position: absolute;
        top: calc( 50% - 1px );
        left: auto;
        right: 68px;
        width: 30px;
        height: 32px;
        transform: translateY(-50%);
        z-index: 30;

        @include mq( 'lap-and-up' ) {
            display: none;
        }
        label {
            position: relative;
            width: 35px;
            height: 35px;
        }
        svg {
            position: absolute;
            z-index: 1;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 20px;
            height: 20px;

            * {
                fill: $color--primary-1;
            }
        }
        input { // Placed over the label to trigger the search bar via the plugin
            position: absolute;
            z-index: 2;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            padding: 0;
            opacity: 0;
            cursor: pointer;
        }
    }

    /*  NAV : MOBILE NAV MENU STYLES
     *   (would have combined them, but its all already setup in theme)
     * ---------------------------------------------- */
    $navMobileMenuGutter: 35px;
    $navMobileSitesHeight: 60px;

    #nav-menu-mobile {
        display: block;
        pointer-events: none;
        opacity: 0;
        position: absolute;
        color: $color--text-1;
        top: -200vh;
        left: 0;
        overflow-x: hidden;
        overflow-y: auto;
        transition: all 0.35s ease-in-out;
        z-index: $zIndexMobileMenu; // 15
        // NOTE : HEIGHT IS DONE IN HEADER STYLE BLOCK B/C IT READS PROMO SECTION HEIGHT!! (See: section/header.liquid)

        &.mobile-nav-open {
            display: block;
            pointer-events: all;
            opacity: 1;
            top: 0px;
            width: 100%;
            //background: {{ settings.header_background }};
            background: $color--reverse-1;
            z-index: 25; // logo is at 50
            margin: 0;
            padding: 70px 0;

            @include mq( 'lap-and-up' ) {
                display: none;
            }
        }

        .nav-search {
            width: 100%;
            left: 50%;
            transform: translateX( -50% );
            margin-bottom: 20px;
            padding: 0 $navMobileMenuGutter;

            input {
                width: 100%;
            }
        }

        ul {
            list-style: none;
        }

        // ACCORDION : Top Level
        #accordion {
            text-align: left;
            margin-left: 0;
            padding: 0 2px 60px; //Aligns the titles to the left edge matching search underline
            @include fontSize( 16px );

            li {
                position: relative;
                border-bottom: none;
            }

            a {
                text-decoration: none;
            }

            .accordion-header,
            .link-header {
                padding: 0;
                font-weight: $font-weight--bold;
                color: $color--text-1;
                text-transform: uppercase;
                letter-spacing: 4px;
                padding-left: 35px;

                a {
                    color: $color--text-1;
                    padding: 0;
                }
            }
            
            .flash-sale {
                @include typeNeon;
            }

            .accordion-header,
            .accordion-sub-header {
                // TRAINGLE : CLOSED : Downward arrow in css
                &:after {
                    width: 0;
                    height: 0;
                    position: absolute;
                    top: 50%;
                    transform: translateY( -50% );
                    right: $navMobileMenuGutter;
                    content: ""; // undo the preset arrow type
                    border-left: 6px solid transparent;
                    border-right: 6px solid transparent;
                    border-top: 9px solid {{ settings.nav_links_hover }};
                    transition: border 0.25s ease-in-out;
                }

                &.open:after {
                    border-top: none;
                    border-bottom: 9px solid {{ settings.nav_links_hover }};
                }
            }

            .sub {
                //background: $color--field-2;
                padding: 0 0 0 35px;

                .accordion-sub-header,
                .link-sub-header {
                    position: relative;
                    text-decoration: none;
                    color: $color--text-1;
                    font-weight: $font-weight--medium;

                    &.custom-sub-header {
                        margin-top: 20px;
                        font-weight: 600;
                        margin-bottom: -10px;
                    }

                    a {
                        color: $color--text-1;
                    }

                    &.open,
                    &.open a {
                        color: {{ settings.nav_links_hover }};
                    }
                }

                li {
                    @include flexbox;
                    @include align-items( center );
                    height: 40px;
                    padding: 0;

                    a {
                        @include flexbox;
                        @include align-items( center );
                        color: $color--text-1;
                        height: 100%;
                    }

                    &.shop-all {
                        font-weight: $font-weight--bold;

                        a {
                            position: relative;

                            // TRAINGLE : CLOSED : Rightward Arrow
                            &:after {
                                width: 0;
                                height: 0;
                                position: absolute;
                                top: 50%;
                                transform: translateY( -50% );
                                right: -20px;
                                content: ""; // undo the preset arrow type
                                border-top: 4px solid transparent;
                                border-bottom: 4px solid transparent;
                                border-left: 8px solid {{ settings.nav_links_hover }};
                            }
                        }
                    }
                }
            }
        }

        #nav-sites-picker-mobile {
            position: fixed;
            width: 100%;
            height: $navMobileSitesHeight;
            bottom: 0;
            left: 0;

            // OPEN : Mobile Sites-Picker is open
            &.open ul.sites-picker {
                li.site-picker-item:first-child:after {
                    transform: translateY( -50% ) rotateZ( -90deg );
                }

                li.site-picker-item:not(:first-child) {
                    opacity: 1;
                    height: $navMobileSitesHeight;
                    pointer-events: all;
                }
            }

            // SITES PICKER : Primary UL Styles
            ul.sites-picker {
                @include flexbox;
                @include flex-direction( column-reverse );
                @include align-items( center );
                position: absolute;
                width: 100%;
                height: auto;
                bottom: 0;
                cursor: pointer;
                background: {{ settings.header_background }};

                li.site-picker-item {
                    @include flexbox;
                    @include justify-content( center );
                    position: relative; // For :after arrow
                    transition: all 0.25s ease-in-out;
                    height: $navMobileSitesHeight;
                    width: 100%;
                    border-top: $navMinorBorder;

                    &:first-child {
                        // TRAINGLE : CLOSED : Rightward Arrow
                        &:after {
                            width: 0;
                            height: 0;
                            position: absolute;
                            top: 50%;
                            transform: translateY( -50% );
                            right: $navMobileMenuGutter;
                            content: ""; // undo the preset arrow type
                            border-top: 6px solid transparent;
                            border-bottom: 6px solid transparent;
                            border-left: 11px solid {{ settings.nav_links_hover }};
                            transition: all 0.25s ease-in-out;
                        }
                    }

                    &:not(:first-child) {
                        opacity: 0;
                        height: 0;
                        pointer-events: none;
                    }

                    .inner-center {
                        @include flexbox;
                        @include align-items( center );
                        width: 230px;
                        height: 100%;
                        text-decoration: none;

                        .site-flag {
                            width: 25px;
                            padding-top: 7px; //Center flag-svg - flexbox doesn't do it quite right
                            margin-right: 20px;
                        }

                        .site-name {
                            @include fontSize( 16px );
                            font-weight: $font-weight--book;
                        }

                        .site-arrow {
                            display: none;
                        }
                    }
                }
            }
        }
    }
}

