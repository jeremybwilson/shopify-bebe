// Yotpo Modal (because of course there is!)

.yotpo {
    &.image-upload-flow-popup {
        .yotpo-modal-base.yotpo-modal-active {

            .yotpo-modal-dialog {
                width: 500px;
                border-radius: 0;

                * {
                    font-family: $sans--2 !important;
                }

                .yotpo-modal-title {
                    @include h2-alt;
                }

                .yotpo-modal-subtitle {
                    @include p;
                }

                .yotpo-upload-photos {
                    .yotpo-caption-modal-textarea {
                        border-radius: 0px;
                        @include p;
                        font-size: 12px !important;
                        font-size: .75rem !important;
                    }
                    &.image-error .yotpo-caption-modal-textarea {
                        background-color: #f4f3f0;
                        border: solid 1px $color--error;
                    }
                    &.image-empty .yotpo-caption-modal-textarea {
                        background-color: $color--field-1;
                    }
                    .yotpo-upload-button {
                        border-radius: 0;

                        .yotpo-icon-cross {
                            right: 1px;
                        }
                    }
                }
            }    
            .yotpo-modal-content {
                .yotpo-user-details-modal-input {
                    border-radius: 0;
                    font-size: 13px !important;
                    font-size: .8125rem !important;
                }
                .yotpo-modal-user-detail-input .user_details_input {
                    margin-top: 13px;
                }
                .yotpo-modal-submit-button {
                    @include buttonDefaultStyle;
                    height: 45px;
                    border-radius: 0;                    

                    .yotpo-modal-submit-label {
                        margin-top: 0;
                        line-height: 45px;
                    }
                }

                .yotpo-modal-close .close-button {
                    @include buttonDefaultStyle;
                    height: 45px;
                    border-radius: 0;
                }
                
            }
            .yotpo-caption-modal-bottom {
                .yotpo-add-more {

                    .yotpo-add-more-label {
                        text-transform: uppercase;
                        @include fontSize( 12px );
                        font-weight: $font-weight--medium;
                    }

                }
                .yotpo-next-button {
                    @include buttonDefaultStyle;
                    border-radius: 0;
                    height: 45px;

                    .yotpo-icon-right-arrow-2 {
                        margin-top: 1px !important;
                    }
                }
            }
        }
    }
}

