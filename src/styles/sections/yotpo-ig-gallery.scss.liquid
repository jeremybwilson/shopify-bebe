.gridlock .yotpo-ig-gallery .row [class*=all-] {
    margin-right: 0;
    margin-left: 0;
}
.yotpo {

    &.yotpo-pictures-gallery,
    &.yotpo-pictures-widget {
        margin-top: 0;

        // header

        .yotpo-pictures-gallery-header-wrapper {

            @include mq( 'desk-and-up' ) {
                position: relative;
            }

            .yotpo-pictures-gallery-title-wrapper {

                @include mq( 'tablet' ) {
                    float: none;
                    text-align: center;
                }
                @include mq( 'desk-and-up' ) {
                    float: none;
                    text-align: center;
                }

                // Top text            

                .yotpo-pictures-gallery-title {
                    display: block;
                    width: 100%;
                    @include p;
                    font-family: $sans--2 !important;
                    text-align: center;    
                    @include fontSize( 12px );
                }

            }

            // Upload button

            .yotpo-pictures-gallery-upload-button-wrapper {

                @include mq( 'tablet' ) {
                    text-align: center;
                }

                @include mq( 'desk-and-up' ) {
                    position: absolute;
                    top: 0;
                    right: 0;
                    margin-top: -15px;

                    .yotpo-icon {
                        line-height: 49px;
                    }
                }
                .yotpo-pictures-gallery-upload-button {
                    @include buttonDefaultStyle;
                    @include mainButton;
                    border-radius: 0;
                    font-family: $sans--2 !important;

                    &:hover {
                        background-color: $color--gray-1 !important;
                    }
                }
            }
        }
    }
}

.yotpo-ig-gallery {
    // max-width: 1440px;
    margin-top: 20px;
    margin-bottom: 20px;

    @include mq( 'tablet-and-up' ) {
        margin-top: 40px;
    }

    div.insta-header {
        text-align: center;
        margin: 12px auto;

        span {
            display: inline-block;
            font-weight: $font-weight--medium;
            color: $color--primary-1;
            @include fontSize(24px);    
        }
        &.show-icon {
            span {
                &:after {
                    background-image: url({{ 'instagram-icon.png' | asset_url }});
                    background-size: 40px 40px;
                    display: inline-block;
                    width: 40px;
                    height: 40px;
                    content: '';
                    position: relative;
                    top: 10px;
                    right: -8px;
                }                
            }            
        }
    }

    .insta-copy {
        text-align: center;
    }
}
html .yotpo.yotpo-pictures-gallery .load-btn-white,
html .yotpo.yotpo-pictures-widget .load-btn-white {
    @include buttonDefaultStyle;
    @include mainButton;
    min-width: 230px;


    .yotpo-icon-button-text {
        color: $color--reverse-1;
        font-family: $sans--2;
        @include fontSize( 14px ); // change this to a settings value
        letter-spacing: .04em;
      
    }
}

div.yotpo {
    .yotpo-pictures-widget {
        margin-top: 0;

        @include mq('lap-and-up') {
            margin-top: 15px;
        }
    }
    .yotpo-pictures-collage-wrapper .yotpo-pictures-collage-small-images-wrapper.row-size-3 {
        margin-right: 0;
        margin-left: 0;
    }

    .yotpo-instagram {
        .yopto-main.yotpo-regular-box {
            font-family: $sans--2;
        }

        .yotpo-footer .yotpo-helpful {
            display: none;
        }

        .yotpo-lightbox-product-name {
            @include h2;
        }

        .yotpo-header .yotpo-header-element .yotpo-instagram-username {
            font-family: $sans--2;
            letter-spacing: .04em;
            color: $color--accent-1;
        }
        label,
        .yotpo-instagram-hashtag {
            font-family: $sans--2;
        }
        
    }

    &.yotpo-lightbox {
        .yotpo-modal.yotpo-modal-active .yotpo-lightbox-container {
            .yotpo-lightbox-content-container {
                .yotpo-instagram .yotpo-icon-profile {
                    background: url({{ 'bebelogo-icon.jpg' | asset_url }}) #666;
                    background-position: center;
                    background-size: cover;
    
                    label {
                        text-indent: -9999px;
                    }
                }
    
                .yotpo-instagram .yotpo-helpful,
                .yotpo-lightbox-products-container .yotpo-lightbox-product-button {
                    display: none;
                }
            }

            .yotpo-label.yotpo-small-box {
                display: none;
            }
        }

        .yotpo-modal .yotpo-modal-mask.yotpo-active-display {
            opacity: 0.1;
        }

        label.yotpo-lightbox-product-name {
            font-family: $sans--2;
            font-size: 12px;
        }
    }

    .yotpo-icon-button-text {
        white-space: nowrap;
    }
}

// Homepage hacks for visibility

.index {
    .yotpo {
        .yotpo-pictures-collage-wrapper {
            margin-left: -5px;
            margin-right: -5px;

            @include mq('phone') {
                .yotpo-pictures-gallery-images-wrapper.row-size-1 {
                    .yotpo-pictures-collage-row {
                        @include flexbox;
                    }
                    .yotpo-pictures-collage-big-image.row-size-1 {
                        
                    }
                    .yotpo-pictures-collage-small-images-wrapper.row-size-1 {
                        @include flexbox;
                        @include flex-direction(column);

                        .yotpo-single-image-container {
                            width: 100%;
                            max-width: none;
                            max-height: none;
                        }
                    }    
                    
                    .yotpo-pictures-collage-row ~ .yotpo-pictures-collage-row {
                        margin-top: calc(-100% / 2);

                        .yotpo-pictures-collage-big-image.row-size-1 {
                            width: calc(100% / 2);
                        }

                        .yotpo-pictures-collage-small-images-wrapper.row-size-1 {
                            display: none;
                        }
                    }                    
                }
            }

            .yotpo-pictures-gallery-images-wrapper.row-size-2,
            .yotpo-pictures-gallery-images-wrapper.row-size-3 {
                .yotpo-pictures-collage-row ~ .yotpo-pictures-collage-row {
                    display: none;
                }
            }
        }
    }
}
