@charset "UTF-8";

.slideshow-section {
  margin-bottom: 0;

  // image holder (for lazy-loading)

  .box-ratio {
    &.slideshow__image__mobile {
      @include mq('tablet-and-up') {
        display: none;
      }
    }
    &.slideshow__image__desktop {
      display: none;
      @include mq('tablet-and-up') {
        display: inherit;
      }
    }
  }

  // text-box

  .flex-caption {
    @include flexbox;
    @include justify-content(center);
    transform: translateY(-50%);

    @include mq('tablet-and-up') {

      &.caption-align-left {
        @include justify-content(flex-start);
      }
      &.caption-align-right {
        @include justify-content(flex-end);
      }
    }

    .caption-inners {
      display: inline-block;
      padding: 10px 20px;
      max-width: 700px;
      text-align: center;
    }    
  }

  .slide-title {
    border-bottom: 0 !important;
    font-weight: $font-weight--black;
    @include fontDim(30px,36px,.04em);
    text-transform: uppercase;

    @include mq('tablet') {
      @include fontSize(38px);
    }    
    @include mq('lap-and-up') {
      @include fontDim(48px,57px,0);
    }

    &:after {
      display: none !important;
    }
  }
  
  // button / cta

  .caption {
    margin-top: 12px;
    font-weight: $font-weight--bold;
    @include fontDim(14px,22px,0);

    @include mq('lap-and-up') {
      margin-top: 20px;
      @include fontDim(16px,26px,0);
    }
  }

  // text box

  .cta {
    display: inline-block;
    margin: 10px 10px 0;

    @include mq('lap-and-up') {
      margin-top: 18px;
    }

    a {
      display: inline-block;
      padding: 15px 25px;
      border: none;
      border-radius: 0;
      color: $color--white;
      @include fontDim(16px,16px,.04em);
      font-weight: $font-weight--black;
      text-transform: uppercase;

      @include mq('lap-and-up') {
        padding: 20px 24px;
        @include fontDim(20px,20px,0);
      }
      &:hover {
        text-decoration: none;
      }
    }
  }

  // navigation 

  .flexslider.one-image-only .slider--nav {
    display: none;
  }
  .slider--nav {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);

    position: absolute;
    z-index: 2;
    bottom: 40px;
    left: 50%;
    width: 100%;
    max-width: 220px;    
    transform: translateX(-50%);
    color: $color--white;

    @include mq('lap-and-up') {
      bottom: 55px;
    }

    .hide-pagination & {
      @include mq('tablet-and-up') {
        display: none;
      }
    }

    svg {
      width: 20px;
      height: 20px;
      margin-top: 7px;

      * {
        fill: $color--white;
      }
    }    

    // pager

    .pagination {
      @include flexbox;
      @include justify-content(center);
      position: relative;
      padding: 10px;
      background: $color--white;
      color: $color--accent-1;
      font-weight: $font-weight--black;
      @include fontDim(14px,14px,0);
      text-align: center;

      @include mq('lap-and-up') {
        @include fontSize(14px);
      }

      span {
        display: inline;
        text-align: center;
        margin: 0 2px;
      }
    }
  }
}