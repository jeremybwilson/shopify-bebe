#collection-catch--loop {
    width: 100%;
    columns: 2;

    @include mq( 'tablet-and-up' ) {
        columns: 3;
    }
    @include mq( 'desk-and-up' ) {
        columns: 4;
    }

    .catch-item {
        -webkit-column-break-inside: avoid;
        page-break-inside: avoid;
        break-inside: avoid;              
            
        a {
            @include flexbox;
            width: 100%;
            margin-bottom: 10px;  
        }
        .catch-item--image {
            width: 33%;
        }
        .catch-item--text {
            width: 66%;
            padding-left: 12px;
            padding-right: 12px;
        }
    
        h3 {
            text-transform: uppercase;
        }
    
    }

}