#customer-wrapper {

  #sign_out {
    @include h6;
    @include fontSize( 13px );  
    position: relative;
    padding: 13px 16px;
    top: 20px;
    background: $color--accent-1;
    color: $color--white;
    outline: none;
    cursor: pointer;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.15em;

    &:hover {
      background: $color--primary-1;
    }
}

  #customer_orders {
    @include mq('phone') {
      margin-top: 50px;
    }
  }

  label {
    display: none;
  }
}


