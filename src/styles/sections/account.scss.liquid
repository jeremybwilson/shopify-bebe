// CUSTOMERS :: Globals
.customers-login,
.customers-account,
.customers-order,
.customers-addresses,
.customers-account-orders {
  #content {
    padding: 0;

    @include mq( 'lap-and-up' ) {
      padding: 25px 0;
    }
  }
}

#customer-wrapper {
  min-height: 300px;
  @include flexbox;
  @include flex-wrap( wrap );

  h1 {
    margin-bottom: 0;
    border-bottom: none;
  }
  .account-header {
    border-bottom: solid 1px {{ settings.dotted_color }};
  }
  p {
    margin: 0;
  }
  input[type="text"],
  input[type="email"],
  input[type="password"] {
    margin-bottom: 8px;
  }
}

// :: CUSTOMERS :: GLOBAL :: Sidebar 
#customer_sidebar {

  h5 {
    @include h3;
  }

  #account-nav {
    list-style: none;
    margin-left: 0;

    li {
      margin-left: 0;
      text-transform: uppercase;

      a {
        margin: 0;
        padding: 5px 0;
      }
    }
  }
}

// :: CUSTOMERS :: Login
.customers-login {

  // :: CUSTOMERS :: LOGIN : Header
  #login-msg {
    display: block;
    width: 100%;
    border-bottom: solid 1px {{ settings.dotted_color }};
    text-align: center;

    h1 {
      @include fontSize( 18px );
    }
  }

  // :: CUSTOMERS :: LOGIN :: Forms 
  #customer--signup-options {
    margin-bottom: 40px;

    label {
      display: none;
    }    
  }
  #customer,
  #create-customer,
  #recover-password {  
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
  }
  #forgot_password {
    margin-bottom: 15px;
  }
}

// LOGIN :: Loyalty Content
@import url('../snippets/login-loyalty.scss.liquid');

// :: CUSTOMERS :: ACCOUNT :: Dashboard
.customers-account {

  #customer_orders {
    h5 {
      @include p;
      text-transform: none;

      &.name {
        @include h2;
      }
    }

    table {
      @include mq( 'phone' ) {
        thead {
          display: none;
        }
        tr {
          display: block;
          padding: 25px;

          &:nth-child(odd) {
            background: $color--field-1;

            td {
              background: none;
            }
          }
        }
        td {
          display: block;
          padding: 0;
        }
      }
    }
  }
}

// :: CUSTOMERS :: Addresses
.address_table {
  margin-bottom: 20px;
}
.address_title {
  @include h3;
}
.action_link {
  display: inline-block;
  margin-bottom: 10px;
}
.action_edit {
  padding: 0 10px;
  border-left: 1px solid {{ settings.dotted_color }};
  border-right: 1px solid {{ settings.dotted_color }};
  margin: 0 10px;
}
a#view_address {
  display: block;
  margin-top: 10px;
}

// :: CUSTOMER :: ADDRESSES :: Edit Address
#add_address_title {
  @include h2;
}
.customer_address_table {
  border: solid 1px {{ settings.dotted_color }};
  tbody tr:nth-child(odd) td {
    background: none;
  }
}

// :: CUSTOMER :: Order Status Page
.order_date {
  padding: 20px 4px; 
  @include h2;

  @include mq( 'lap-and-up' ) {
    padding: 20px 8px;
  }
}
.order_section_title {
  @include h3;
}
#order_payment,
#order_shipping {
  margin-bottom: 20px;
}
#order_details {
  float: left;
  
  td {
    vertical-align: top;
  }

  .order_summary .label {
    text-align: right;
  }
}

