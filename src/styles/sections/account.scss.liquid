// Globals

#customer-wrapper {

  p {
    margin: 0;
  }

  h2 {
    @include h3;
    color: $color--primary-1;
  }
  h5 {
    @include h5;
    line-height: 1.6875em;
    letter-spacing: .025em;
    color: $color--primary-1;    
    font-weight: 700;
  }
  input[type="text"],
  input[type="email"],
  input[type="password"] {
    margin-bottom: 8px;
  }
}

// Login Page 
.customers-login {
  #content {
    padding: 25px 0;
  }

  // LOGIN : Header
  #login-msg {
    display: block;
    width: 100%;
    border-bottom: solid 1px {{ settings.dotted_color }};
    text-align: center;

    h1 {
      border-bottom: none;
      @include fontSize( 18px );
    }
  }

  // LOGIN :: Forms 
  #customer--signup-options {
    margin-bottom: 40px;
  }

  #customer,
  #create-customer {
    margin-top: 0;
  }
  // LOGIN :: FORMS :: Customer
  #customer {
    width: 100%;
  }

  #forgot_password {
    margin-bottom: 15px;
  }
}

// LOGIN :: Loyalty Content
@import url('../snippets/login-loyalty.scss.liquid');

