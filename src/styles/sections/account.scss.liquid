// Globals

.customers-login,
.customers-account,
.customers-orders,
.customers-addresses {
  #content {
    padding: 25px 0;
  }
}

#customer-wrapper {
  min-height: 300px;

  h1 {
    margin-bottom: 0;
    border-bottom: none;
  }
  .account-header {
    padding-bottom: 20px;
    border-bottom: solid 1px {{ settings.dotted_color }};
  }
  p {
    margin: 0;
  }
  input[type="text"],
  input[type="email"],
  input[type="password"] {
    margin-bottom: 8px;
  }
}

// Global Sidebar 

#customer_sidebar {
  h5 {
    @include h2;
  }
  #sign_out {
    margin-top: 20px;
  }
}


// Login Page 
.customers-login {

  // LOGIN : Header
  #login-msg {
    display: block;
    width: 100%;
    border-bottom: solid 1px {{ settings.dotted_color }};
    text-align: center;

    h1 {
      @include fontSize( 18px );
    }
  }

  // LOGIN :: Forms 
  #customer--signup-options {
    margin-bottom: 40px;
  }
  label {
    display: none;
  }

  #customer,
  #create-customer {
    margin-top: 0;
  }
  // LOGIN :: FORMS :: Customer
  #customer {
    width: 100%;
  }

  #forgot_password {
    margin-bottom: 15px;
  }
}

// LOGIN :: Loyalty Content
@import url('../snippets/login-loyalty.scss.liquid');

// Account Dashboard
.customers-account {

  #customer_orders {
    h5 {
      @include p;
      text-transform: none;

      &.name {
        @include h2;
      }
    }
  }
}

