// Mini-Cart
$z-index-drawer: 1010;

.is-transitioning {
  display: block !important;
  visibility: visible !important;
}

.drawer-content::after {
  content: "";
  visibility: hidden;
  opacity: 0;
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: $z-index-drawer - 1;

  .js-drawer-open-right & {
    visibility: visible;
    opacity: 1;
    @include mq('phone'){
      background-color: rgba(0,0,0,.5);
    }
  }
}

// INIT STYLES FROM OLD THEME
.js-drawer-open {
  overflow: hidden;
  height: 100%;
}

.js-drawer-open-right .is-moved-by-drawer {
  -ms-transform: translateX(-300px);
  -webkit-transform: translateX(-300px);
  transform: translateX(-300px);
  @include mq( 'phone' ){
    -ms-transform: translateX(0px);
    -webkit-transform: translateX(0px);
    transform: translateX(0px);
  }
}

.is-moved-by-drawer {
  transition: all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);
}

.js-drawer-open-right .drawer--right {
  display: block;
  -ms-transform: translateX(-300px);
  -webkit-transform: translateX(-300px);
  transform: translateX(-300px);
  @include mq( 'phone' ){
    top: 50%;
    -ms-transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
    transform: translate(-50%, -50%) scale(1);
  }
}

.table-cell {
  display: table-cell;
  vertical-align: middle;
  width: 50%;
}

.ajaxcart {
  font-family: $sans--2;
}

.ajaxcart__inner {
  margin-bottom: 30px;
}

#CartDrawer .row {
  padding-bottom: 15px;
  margin-bottom: 15px;
  border-bottom: 1px solid {{ settings.dotted_color }};
  width: 270px;
  @include mq('phone'){
    width:100%;
  }
}

span.fallback-text {
  display: none;
}

input.ajaxcart__qty-num {
  display: inline-block;
  float: left;
  width: 40px;
  height: 40px;
  line-height: 40px;
  border: 1px solid {{ settings.dotted_color }};
  padding: 0;
  text-align: center;
  -webkit-appearance: none;
  text-indent: 0;
  -moz-appearance: none;
  color: {{ settings.text_color }};
  border-left: 0;
  border-right: 0;
  margin-bottom:0;
  background: transparent;
  outline: 0 none;
  border-radius: 0;
}

input.js-qty__num {
  float: left;
  display: inline-block;
  width: initial;
  height: 40px;
  line-height: 40px;
  padding: 0;
  margin: 0;
  border-left: 0;
  border-right: 0;
  text-align: center;
  min-width: initial;
  max-width: 50px;
  -webkit-appearance: none;
  -moz-appearance: none;
  text-indent: 0;
  outline: 0 none;
}

textarea#CartSpecialInstructions {
  width: 270px !important;
  max-width: 270px;
  min-width: 270px;
}

// MINI-CART

.drawer .text-right {
  line-height: 40px;
}

.drawer--right {
  width: 300px;
  right: -300px;
  border-left: 1px solid {{ settings.dotted_color }};
  @include mq( 'phone' ){
    border:none;
    width:500px;
    right: unset;
  }
}

.drawer {
  -webkit-transform: translateZ(0);
  will-change: transform;
  outline: 0 none;
  display: none;
  position: fixed;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  top: 0;
  bottom: 0;
  padding: 0 15px 15px;
  max-width: 95%;
  z-index: $z-index-drawer;
  color: {{ settings.text_color }};
  background-color: $color--reverse-1;
  transition: all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);
  @include mq( 'phone' ){
    transition: all 0.4s linear ;
    top: 0;
    bottom: unset;
    padding: 15px;
    transform: scale(0) translateX(-50%);
    left: 50%;
    max-height: calc(100vh - 100px);
  }
}

// :: MINI-CART :: HEADER

.drawer__header {
  @include flexbox;
  @include align-items(center);
  @include justify-content(space-between);
  height: 40px;
  width: 100%;
  margin-bottom: 15px;

  h3 {
    margin-bottom: 0;
    @include fontDim(16px,16px,0);
    font-weight: $font-weight--bold;
    text-transform: uppercase;
    color: $color--primary-1;
  }
}

// :: MINI-CART :: HEADER :: CLOSE

.drawer__close {
  position: absolute;
  top: 4px;
  right: 4px;
  width: 25px;
  height: 25px;
  line-height: 25px;
  cursor: pointer;
  z-index: 8040;
  text-align: center;
  transition: all .25s ease-in-out;

  span {
    display: none;
    text-indent: -9999em;
  }
  &:hover {
    color: $color--accent-1;
  }
  &:before,
  &:after {
    content:'';
    height:1px; width:24px;
    display:block;
    background-color: {{ settings.fancybox_close_color }};
    position:absolute;
    top:12px; right:0;
    transform:rotate(-45deg);
    -webkit-transform:rotate(-45deg);
    -moz-transform:rotate(-45deg);
    -o-transform:rotate(-45deg);
    -ms-transform:rotate(-45deg);
  }    
  &:after {
    transform:rotate(45deg);
    -webkit-transform:rotate(45deg);
    -moz-transform:rotate(45deg);
    -o-transform:rotate(45deg);
    -ms-transform:rotate(45deg);
  }
}

// View Cart Link

.ajaxcart__view-cart-link {
  width: 100%;
  border-bottom: 1px solid {{ settings.dotted_color }};
  padding-bottom: 12px;
  margin-bottom: 12px;
  margin-top: -15px;
  text-transform: uppercase;
}

// Product Item

.ajaxcart__product {
  position: relative;
  max-height: 500px;

  p {
    color: $color--primary-1;
  }
}


.ajaxcart__product-name {
  @include fontDim(14px,14px,0);
  font-weight: $font-weight--medium;
  color: $color--primary-2;
}
.ajaxcart__product-meta {
  color: $color--primary-2;
  display: block;
}

.ajaxcart__product-image {
  display: block;
  overflow: hidden;
  margin-bottom: 15px;

  img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
  }
}

.quantity-increment {
  margin-bottom: 12px;
  color: $color--gray-1;
  font-weight: $font-weight--bold;

  &:hover {
    background: $color--primary-1;
    color: $color--white;
  }
}

.ajaxcart__product.is-loading {
  pointer-events: none;
  position: relative;

  &:after {
    content: 'Updating...';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 6px 8px;
    background: $color--primary-1;
    @include h7;
    text-transform: uppercase;
    color: $color--white;
  }
  
  .ajaxcart.row {
    opacity: .4;
  }

}

.ajaxcart__remove {
  display: block;
  clear: both;
  cursor: pointer;
  color: $color--accent-1;
  text-decoration: none;
  @include h7;
}

.ajaxcart__footer {

  &.row {
    .text-right {
      line-height: initial;
    }
    .text-center {
      clear: left;
      @include fontSize(11px);
      font-weight: $font-weight--book;
      text-transform: uppercase;
    }
  } 

  p {
    @include fontDim(14px,14px,0);
    font-weight: $font-weight--bold;
    color: $color--primary-2;

    strong {
      font-weight: $font-weight--bold;
    }
  }

  .additional-checkout-button + .additional-checkout-button {
    margin-left: 0px;
  }
}

// Checkout

button.cart__checkout {
  width: 100%;
  background: $color--primary-1;
  color: $color--reverse-1;

  &:hover {
    background: $color--accent-1;
    color: $color--reverse-1;
  }
}
