
form {
  margin-bottom: 0;
}

fieldset {
  margin-bottom: 20px;
}

input[type="text"],
input[type="password"],
input[type="email"],
textarea,
select {
  border: 1px solid {{ settings.dotted_color }};
  height: 40px;
  line-height: 40px;
  outline: none;
  font: 13px {{ main_font.family }};
  color: {{ settings.text_color }};
  margin: 0;
  width: 100%;
  max-width: 100%;
  display: block;
  border-radius: 3px;
  margin-bottom: 10px;
  background: transparent;
  height: 40px;
}

select {
  padding: 0;
}

input[type="text"]:focus,
input[type="password"]:focus,
input[type="email"]:focus,
textarea:focus {
  -moz-box-shadow: 0 0 3px rgba(0,0,0,.2);
  -webkit-box-shadow: 0 0 3px rgba(0,0,0,.2);
  box-shadow:  0 0 3px rgba(0,0,0,.2);
  min-height: 32px;
}

textarea {
  min-height: 60px;
  min-width: 300px;
}

label,
legend {
  display: block;
  font-weight: bold;
  font-size: 13px;
}

input[type="checkbox"] {
  display: inline;
}

label span,
legend span {
  font-weight: normal;
  font-size: 13px;
  color: {{ settings.text_color }};
}

input[type=text],
input[type=password],
input[type=email],
input[type=url],
input[type=number] {
  width: 100%;
  background: transparent;
  border: 1px solid {{ settings.dotted_color }};
  margin: 0px;
  margin-bottom: 20px;
  max-width: 100%;
  text-indent: 10px;
  outline: none;
  height: 40px;
  line-height: 40px;
}

textarea {
  width: 100%;
  background: transparent;
  border: 1px solid {{ settings.dotted_color }};
  height: 200px;
  margin: 0px;
  margin-bottom: 40px;
  max-width: 100%;
  text-indent: 10px;
  padding: 10px 0;
  outline: none;
  min-height: 60px;
}