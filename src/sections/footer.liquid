<div class="footer-section" data-section-id="{{ section.id }}" data-section-type="footer-section">
  <footer class="site-footer">

    {% comment %} :: ROW #1 -- Footer Menu + Brand Links :: {% endcomment %}
    {% comment %} :: Manually removing this while building out new footer :: {% endcomment %}
    <div class="row" style="display:none;">

      {% comment %} :: FOOTER NAVIGATION :: {% endcomment %}
      {% if section.blocks %}
        <div class="footer-blocks">

          {% for block in section.blocks %}
            {% assign menu = linklists[block.settings.menu_id] %}
            <div class="footer-nav">
              <nav>

              </nav>
            </div><!-- .footer-nav -->
          {% endfor %}

        </div><!--.footer-blocks-->
      {% endif %}
    </div><!-- .row -->

    <div class="row">

      {% comment %} :: ROW #2 -- Newsletter signup :: {% endcomment %}
      <div id="newsletter-social" class="newsletter-{{ section.id }}" data-section-id="{{ section.id }}"
        data-section-type="newsletter-social">
        <div class="newsletter-wrapper">

          <div class="newsletter">
            <div class="email-text">
              <div class="foot-sub-emailtext">
                <h3 class="newsletter-subheading">{{ section.settings.newsletter_subheading }}</h3>
                {% comment %} :: JS from live site related to newsletter form :: {% endcomment %}
                {% comment %} <script type="text/blzscript">$(document).ready(function(){if(("#egcForm").length){$("#eGiftFormContent .scheduleDelivery span").html("(If today's date is selected, e-gift card will be sent the following day. Weekend orders will be sent by end of day on Monday.)");}});</script> {% endcomment %}
              </div><!-- .foot-sub-emailtext -->
              <div class="foot-sub-emailform fl-inline">
                <form id="footer-newsletter">
                  <input class="form-control subscribe-form" type="email" id="email" name="email" placeholder="{{ section.settings.newsletter_placeholder }}">
                  <label id="button-footer-newsletter-submit" for="footer-newsletter-submit">
                    <input id="footer-newsletter-submit" type="submit" value="{{ section.settings.newsletter_submit_button }}">
                    {% comment %} {% include 'svg-icon-caret-right-submit' %} {% endcomment %}
                  </label>
                </form>
                <div id="newsletter-form--response">
                  <span id="newsletter-error-response" style="display:none;">{{ section.settings.newsletter_error }}</span>
                  <span id="newsletter-success-response" style="display:none;">
                  {{ section.settings.newsletter_success }}</span>
                </div>
                {% comment %} :: Hidden link text related to email and sms notification (sign up forms) ::  {% endcomment %}
                {% comment %} <a style="display:none;" class="openAjaxLayer" id="jsLauchEmailLayer" href="/user/subscribe_layer.jsp">Email Sign Up</a>
                <a style="display:none;" class="openAjaxLayer" id="jsLauchTextLayer" href="/user/text_subscribe_layer.jsp">Text Sign Up</a> {% endcomment %}
              </div><!-- .foot-sub-emailform -->
            </div><!-- .email-text -->
          </div><!-- .newsletter -->

        {% comment %} :: FOOTER NAVIGATION :: {% endcomment %}
        {% if section.blocks %}
          <div class="footer-blocks">
            {% assign menu = linklists[section.settings.footer_nav] %}

            <div class="footer-nav">
              <nav>
              {% comment %} :: LINKS : Menu Content links :: {% endcomment %}
                <ul>
                {% for link in menu.links %}
                  {% comment %} :: NESTED MENU :: {% endcomment %}
                  {% if link.levels > 0 %}
                    <li class="footer-sub-nav-wrapper" data-link-size="{{ link.links.size }}">
                    <h4 class="nav-sub-header">{{ link.title }}</h4>
                      <ul class="footer-sub-nav hide">
                      {% for sub_link in link.links %}
                        <li>{{ sub_link.title | link_to: sub_link.url }}</li>
                      {% endfor %}
                      </ul>
                    </li><!-- .footer-sub-nav-wrapper -->
                  {% comment %} :: ELSE, REGULAR SINGLE LINK :: {% endcomment %}
                  {% else %}
                    <li>{{ link.title | link_to: link.url }}</li>
                  {% endif %}

                {% endfor %}
                </ul>
              </nav>
            </div><!-- .footer-nav -->
          </div><!-- .footer-blocks -->
          {% endif %}
        </div><!-- .newsletter-wrapper -->

      {% comment %} :: Social Media Navigation :: {% endcomment %}
      {% if section.blocks %}
        <div class="social-wrapper">
          <div class="social-inner">
          {% comment %} {% unless section.settings.social_heading == blank %}
            <h4 class="section-title">{{ section.settings.social_heading }}</h4>
          {% endunless %} {% endcomment %}
          {% unless section.settings.social_insta_hashtag == blank %}
            <h4 class="section-title">{{ section.settings.social_insta_hashtag }}</h4>
          {% endunless %}
            <div class="social-image">
              {% if section.settings.instagram_footer_image != blank %}
                {% assign insta_img_url = section.settings.instagram_footer_image | img_url: '542x' %}
                {% if section.settings.instagram_footer_link != blank %}<a href="{{ section.settings.instagram_footer_link }}" target="_blank">{% endif %}
                  <img src="{{ insta_img_url }}" alt="Placeholder Image" />
                {% if section.settings.link != blank %}</a>{% endif %}
              {% endif %}
              {% comment %} <img src="https://via.placeholder.com/545.png" alt="Placeholder Image" /> {% endcomment %}
            </div>
            <ul id="social-icons" class="desktop-4 tablet-2 mobile-3">
              {% include 'social-icons' %}
            </ul><!-- #social-icons -->
          </div><!-- .social-inner -->
        </div><!-- .social-wrapper -->
      {% endif %}
      </div><!-- .newsletter-social-->
    </div>

    {% comment %} :: ROW #3 -- Privacy Policy + Terms + Site Map :: {% endcomment %}
    <div class="row"><!-- style="font-family:SourceSansProRegular,Arial,Helvetica,sans-serif;" -->
      <div class="foot-subfoot">
        <div class="subfoot-links">
          {% comment %} :: RAF Section hidden in footer comps :: {% endcomment %}
          {% comment %}  <span class="raf-wrapper">
            <a class="raf-footer" href="#">
              <span class="raf-text">
                  REFER A FRIEND &amp; GET
                  <span class="strong">200 POINTS</span>
              </span>
              <span class="raf-separator"></span>
              <span class="fo-how">FIND OUT HOW â–º</span>
            </a>
          </span><!-- .raf-wrapper --> {% endcomment %}
          <div class="copyright">
            <span class="copyright-wrapper">&copy; 2018 BEBE STUDIO, INC.&nbsp; ALL RIGHTS RESERVED&nbsp;</span>
          </div>
          {% comment %} :: LINKS : Copyright / privacy footer links :: {% endcomment %}
          {% assign privacy_menu = linklists[section.settings.footer_privacy_nav] %}
          <span>
          <h1>{{ section.settings.privacy_menu | json }}<h1>
          {% for links in privacy_menu.links %}
            <span class="link-wrap">{{ link.title | link_to: link.url }}</span>
          {% endfor %}
            <span class="link-wrap">
              <a href="#" title="CALIFORNIA TRANSPARENCY IN SUPPLY CHAINS ACT">CALIFORNIA TRANSPARENCY IN SUPPLY CHAINS ACT</a>
            </span>
            <span class="link-wrap">
                <a href="#" title="OUR CALIFORNIA PRIVACY RIGHTS">YOUR CALIFORNIA PRIVACY RIGHTS</a>
            </span>
            <span class="link-wrap">
              <a href="#" title="TERMS OF USE">TERMS OF USE</a>
            </span>
            <span class="link-wrap">
              <a href="#" title="">SITE MAP</a>
            </span>
          </span>
        </div><!-- .subfoot-links -->
      </div><!-- .foot-subfoot -->
    </div>

  </footer>
</div>


