<div id="CartDrawer" class="drawer drawer--right">
  <div class="drawer__header">
    <h3>{{ 'cart.general.title' | t }}</h3>
    <span class="drawer__close js-drawer-close">
        <span>{{ 'cart.general.close_cart' | t  }}</span>
    </span>
  </div>
  <div id="CartContainer"></div>
  <input type="hidden" value="{{ settings.shipping_text }}" class="shipping-text-outer">
  <input type="hidden" value="{{ settings.shipping_threshold }}" class="shipping-threshold">
</div>