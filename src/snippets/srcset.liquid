{% assign sizes = '360,480,765,900,1000,1200,1500,1900' | split: "," %}
{%- if settings.image_blur -%}
{% assign base_classes =  "lazyload img_blur blur-up" %}
{% else  %}
{% assign base_classes =  "lazyload img_blur" %}
{%- endif -%}
{%- if asset_url -%}
<img  alt="{{src_alt}}"
{%- if settings.image_blur -%}
src="{{- src_name | asset_img_url: '100x' -}}"
{%- else -%}
src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
{%- endif -%}
data-sizes="auto"
data-src="{{- src_name | asset_img_url: 'master'  -}}"
data-srcset="
{%- for size in sizes -%}
{%- assign size_x = size| append : 'x' -%}
{{- src_name | asset_img_url: size_x  }} {{size | append:'w' -}},
{%- endfor -%}"
class="{{base_classes}}{%  unless src_class == blank %} {{src_class}}{% endunless %}">
{%- else -%}
<img  alt="{{src_alt}}"
{%- if settings.image_blur -%}
src="{{- src_name | img_url: '100x' | format:'pjpg' -}}"
{%- else -%}
{%- unless no_base -%}
src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
{%- endunless -%}
{%- endif -%}
data-sizes="auto"
data-src="{{- src_name | img_url: 'master'  | format:'pjpg' -}}"
data-srcset="
{%- for size in sizes -%}
{%- assign size_x = size| append : 'x' -%}
{{- src_name | img_url: size_x | format:'pjpg' }} {{size | append:'w' -}},
{%- endfor -%}"
class="{{base_classes}} no_blur{%  unless src_class == blank %} {{src_class}}{% endunless %}">
{%- endif -%}