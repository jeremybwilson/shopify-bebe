{% if settings.share_facebook %}
  <li>
    <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" target="_blank" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
      <span class="sr-only">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
      {% comment %} {% include 'svg-icon-facebook' %} {% endcomment %}
      {% include 'svg-icon-facebook2' %}
    </a>
  </li>
{% endif %}

{% if settings.share_twitter %}
  <li>
    <a href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" target="_blank" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      <span class="sr-only">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
      {% comment %} <i class="fa fa-twitter fa-2x"></i> {% endcomment %}
      {% include 'svg-icon-twitter' %}
    </a>
  </li>
{% endif %}

{% if settings.share_pinterest %}
  <li>
    <a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" target="_blank" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      <span class="sr-only">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
      {% comment %} <i class="fa fa-pinterest fa-2x"></i> {% endcomment %}
      {% include 'svg-icon-pinterest' %}
    </a>
  </li>
{% endif %}
