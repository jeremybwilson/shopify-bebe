<div id="newsletter-modal" class="newsletter-modal" style="display:none;">

  <div class="newsletter-modal__head">
    {%- if settings.newsletter_popup_title != blank -%}
      <h3 class="newsletter-modal__heading">{{ settings.newsletter_popup_title }}</h3>
    {%- endif -%}

    {%- if settings.newsletter_popup_promotion != blank -%}
      <h2 class="newsletter-modal__promotion">{{ settings.newsletter_popup_promotion }}</h2>
    {%- endif -%}

    {%- if settings.newsletter_popup_body != blank -%}
      <p class="newsletter-modal__body">{{ settings.newsletter_popup_body }}</p>
    {%- endif -%}
  </div>

  <form id="modal-newsletter"
        action="{{ section.settings.newsletter_subscription_api_url }}"
        method="POST">
    <input type="hidden" name="MID" value="{{ section.settings.newsletter_email_service_provider_mid }}">
    <input type="hidden" name="lid" value="{{ section.settings.newsletter_email_service_provider_lid }}">
    <input type="hidden" id="sub-action" name="SubAction" value="{{ section.settings.newsletter_sub_action }}" checked>
    <input type="hidden" id="thank-you-url" name="thx" value="">
    <input type="hidden" id="error-url" name="err" value="">
    <input type="hidden" id="unsub-url" name="usub" value="">
    <div class="klaviyo_field_group">
      <label  id="subscribe-footer-newsletter" for="modal-newsletter">
        <input  type="email"
                name="Email Address"
                id="email"
                value="{% if customer %}{{ customer.email }}{% endif %}"
                aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}"
                placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}"
                class="newsletter-modal__input"
                autocorrect="off"
                autocapitalize="off">
      </label>
      <!-- <span class="newsletter-modal__btn-group"> -->
        <label id="button-modal-newsletter-submit" class="newsletter-modal__btn-group" for="modal-newsletter-submit">
          <button type="submit" id="footer-newsletter-submit" class="button newsletter-modal__btn" name="commit">
            {{ 'general.newsletter_form.submit' | t }}
          </button>
        </label>
      <!-- </span> -->
    </div>
    <div id="newsletter-form--response">
      <span id="newsletter-success-response" class="success_message newsletter-modal__success" style="display:none;">{{ section.settings.newsletter_error }}</span>
      <span id="newsletter-error-response" class="error_message newsletter-modal__error" style="display:none;">{{ section.settings.newsletter_success }}</span>
    </div>
    <!-- <div class="klaviyo_messages">
      <div class="success_message newsletter-modal__success" style="display:none;"></div>
      <div class="error_message newsletter-modal__error" style="display:none;"></div>
    </div> -->
  </form>

  {%- if settings.newsletter_popup_fine_print != blank -%}
    <p class="newsletter-modal__fine-print">{{ settings.newsletter_popup_fine_print }}</p>
  {%- endif -%}
</div>
